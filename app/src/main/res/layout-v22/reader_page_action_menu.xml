<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/menu_container"
    android:background="@drawable/reader_page_action_menu_bg"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_centerVertical="true"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="6dp">
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/reader_page_action_menu_comment"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="@string/reader_page_action_menu_comment"
        android:drawablePadding="2dp"
        android:paddingVertical="8dp"
        app:drawableTopCompat="@drawable/reader_page_action_menu_comment"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/reader_page_action_menu_tts"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="@string/reader_page_action_menu_tts"
        android:drawablePadding="2dp"
        android:paddingVertical="8dp"
        app:drawableTopCompat="@drawable/reader_page_action_menu_tts"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/reader_page_action_menu_copy"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="@string/reader_page_action_menu_copy"
        android:drawablePadding="2dp"
        android:paddingVertical="8dp"
        app:drawableTopCompat="@drawable/reader_page_action_menu_copy"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/reader_page_action_menu_underline"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="@string/reader_page_action_menu_line"
        android:drawablePadding="2dp"
        android:paddingVertical="8dp"
        app:drawableTopCompat="@drawable/reader_page_action_menu_underline"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/reader_page_action_menu_del_underline"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="@string/reader_page_action_menu_del_line"
        android:drawablePadding="2dp"
        android:paddingVertical="8dp"
        app:drawableTopCompat="@drawable/reader_page_action_menu_del_underline"/>
    <TextView
        android:textSize="10dp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/reader_page_action_wrong_words_feedback"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:text="@string/wrong_words_feedback"
        android:drawablePadding="2dp"
        android:paddingVertical="8dp"
        app:drawableTopCompat="@drawable/reader_page_typo_feedback"/>
</LinearLayout>
