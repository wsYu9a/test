<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/gender_guide"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/gender_guide_male"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:onClick="onBoyClick">
            <View
                android:background="@drawable/bg_gender_guide_male"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_gender_male"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/bookrack_tag_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/male_books"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/day_text_color_thirdly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/male_books_category"/>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/gender_male_more"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/icon_more_male"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/gender_guide_female"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:onClick="onGirlClick">
            <View
                android:background="@drawable/bg_gender_guide_female"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_gender_female"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#ff436a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/female_books"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/day_text_color_thirdly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/female_books_category"/>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/gender_female_more"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/icon_more_female"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/gender_guide_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/gender_guide">
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_use"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="14sp"
            android:id="@+id/guide_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/welcome_use_desc"
            app:textColorType="2"/>
    </LinearLayout>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/day_text_color_unclickable"
        android:id="@+id/enter_skip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/enter_skip"
        android:layout_alignParentRight="true"
        android:onClick="onGenderSkipClick"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/day_text_color_unclickable"
        android:id="@+id/enter_hint"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:text="@string/enter_application"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/permission_guide"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="56dp">
        <View
            android:background="@drawable/bg_float_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"/>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:backgroundType="6">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_state_permission_title"
                android:singleLine="true"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/phone_state_permission_desc"
                android:singleLine="true"
                app:textColorType="2"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
    </RelativeLayout>
</com.martian.libmars.ui.theme.ThemeRelativeLayout>
