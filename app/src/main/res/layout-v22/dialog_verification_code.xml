<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:orientation="vertical"
            android:id="@+id/dialog_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="40dp"
            app:backgroundType="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/dialog_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/captcha_code"/>
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/input_view"
                android:background="@drawable/border_search_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginHorizontal="24dp"
                app:backgroundType="34">
                <com.martian.libmars.ui.theme.ThemeEditText
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:id="@+id/dialog_edit"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/input_verification_code"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:layout_marginStart="16dp"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/code_bg"
                    android:layout_width="67dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitXY"
                    android:layout_marginVertical="8dp"/>
                <com.martian.libmars.ui.theme.ThemeImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_refresh"
                    android:padding="8dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_refresh_verification"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/error_text_color"
                android:gravity="center_vertical"
                android:id="@+id/tv_error_tips"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="2dp"
                android:layout_marginHorizontal="24dp"
                app:drawableLeftCompat="@drawable/icon_error_tips"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/dialog_textColor"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_confirm"
                android:background="@drawable/border_button_round_default"
                android:paddingTop="9dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="20dp"
                android:text="@string/confirm"
                android:layout_marginHorizontal="24dp"
                app:selectableItem="true"
                app:textColorType="-1"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:id="@+id/iv_close"
            android:padding="12dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_verification_dialog_close"
            android:layout_marginEnd="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
