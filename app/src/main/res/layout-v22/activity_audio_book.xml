<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/actionbar_top_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:alpha="0"/>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp">
                    <ImageView
                        android:id="@+id/iv_close"
                        android:padding="4dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_arrow_bottom"
                        android:contentDescription="@string/exit_text"
                        android:layout_marginStart="16dp"/>
                </androidx.appcompat.widget.Toolbar>
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:id="@+id/audiobook_ad_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:alpha="0"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/audiobook_cover_view"
                            android:layout_width="match_parent"
                            android:layout_height="279dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginHorizontal="20dp">
                            <RelativeLayout
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/rl_cover"
                                android:layout_width="135dp"
                                android:layout_height="180dp">
                                <com.martian.libmars.widget.BookCoverImageView
                                    android:id="@+id/iv_cover"
                                    android:layout_width="135dp"
                                    android:layout_height="180dp"
                                    android:scaleType="centerCrop"
                                    app:bookCoverDrawable="@drawable/cover_loading_default_day"
                                    app:cornerRadiusBottomLeft="8dp"
                                    app:cornerRadiusBottomRight="16dp"
                                    app:cornerRadiusTopLeft="8dp"
                                    app:cornerRadiusTopRight="16dp"
                                    app:maskDrawable="@drawable/bg_book_cover_mask"
                                    app:selectableCoverType="2"/>
                                <TextView
                                    android:textSize="15sp"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:id="@+id/tv_cover_book_name"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dp"
                                    android:lineSpacingMultiplier="1.1"/>
                            </RelativeLayout>
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/tv_chapter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:lines="1"/>
                            <RelativeLayout
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/bg_audio_book_content_shape"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp">
                                <HorizontalScrollView
                                    android:scrollbars="none"
                                    android:fadingEdgeLength="24dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:requiresFadingEdge="horizontal"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="30dp">
                                    <TextView
                                        android:textSize="14sp"
                                        android:textColor="@color/white"
                                        android:id="@+id/tv_content"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:lines="1"/>
                                </HorizontalScrollView>
                                <ImageView
                                    android:id="@+id/iv_content_enlarge"
                                    android:paddingTop="9dp"
                                    android:paddingBottom="9dp"
                                    android:visibility="gone"
                                    android:layout_width="25dp"
                                    android:layout_height="34dp"
                                    android:src="@drawable/icon_audio_book_enlarge"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="9dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_available_time"
                            android:background="@drawable/border_audio_book_entry_bg"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="98dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp">
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:id="@+id/tv_available_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="12dp"
                                android:lines="1"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <com.martian.libmars.ui.theme.ThemeLinearLayout
                                android:gravity="center"
                                android:id="@+id/rl_buy_vip"
                                android:background="@drawable/shape_vip_button"
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginHorizontal="12dp"
                                app:backgroundType="-1"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/tv_go_unlock"
                                app:layout_constraintTop_toBottomOf="@+id/tv_available_time"
                                app:selectableLayout="true">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_vip_tag_audio"/>
                            </com.martian.libmars.ui.theme.ThemeLinearLayout>
                            <com.martian.libmars.ui.theme.ThemeLinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/tv_go_unlock"
                                android:background="@drawable/border_audio_book_go_unlock"
                                android:layout_width="0dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="12dp"
                                app:backgroundType="-1"
                                app:layout_constraintLeft_toRightOf="@+id/rl_buy_vip"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_available_time"
                                app:selectableLayout="true">
                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    android:visibility="gone"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="4dp"
                                    android:progressTint="@color/white"
                                    android:indeterminateTint="@color/white"/>
                                <TextView
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:id="@+id/audio_video"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="看视频解锁60分钟"
                                    android:lines="1"/>
                            </com.martian.libmars.ui.theme.ThemeLinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                            <com.martian.mibook.mvvm.widget.TextSeekBar
                                android:id="@+id/seekBar"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxHeight="2dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                style="@style/AudioBookPlayerSeekBarStyle"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:id="@+id/tv_player_listen_and_read"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_with_tts"
                                android:drawablePadding="4dp"
                                android:layout_marginStart="20dp"
                                app:drawableTopCompat="@drawable/icon_player_listen_and_read"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_player_play"
                                app:layout_constraintEnd_toStartOf="@+id/iv_player_prev"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/iv_player_play"/>
                            <ImageView
                                android:id="@+id/iv_player_prev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_player_prev"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_player_play"
                                app:layout_constraintEnd_toStartOf="@+id/iv_player_play"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toEndOf="@+id/tv_player_listen_and_read"
                                app:layout_constraintTop_toTopOf="@+id/iv_player_play"/>
                            <ImageView
                                android:id="@+id/iv_player_play"
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:src="@drawable/icon_player_play"
                                app:layout_constraintEnd_toStartOf="@+id/iv_player_next"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toEndOf="@+id/iv_player_prev"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar"/>
                            <ProgressBar
                                android:id="@+id/pb_loading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:indeterminateTint="@android:color/white"
                                app:layout_constraintEnd_toStartOf="@+id/iv_player_next"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toEndOf="@+id/iv_player_prev"
                                app:layout_constraintTop_toBottomOf="@+id/seekBar"
                                style="?android:attr/progressBarStyle"/>
                            <ImageView
                                android:id="@+id/iv_player_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_player_next"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_player_play"
                                app:layout_constraintEnd_toStartOf="@+id/tv_player_chapter"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toEndOf="@+id/iv_player_play"
                                app:layout_constraintTop_toTopOf="@+id/iv_player_play"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal"
                                android:id="@+id/tv_player_chapter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="48dp"
                                android:text="1024章"
                                android:drawablePadding="4dp"
                                android:layout_marginEnd="20dp"
                                app:drawableTopCompat="@drawable/icon_player_chapter"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_player_play"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toEndOf="@+id/iv_player_next"
                                app:layout_constraintTop_toTopOf="@+id/iv_player_play"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal"
                                android:id="@+id/tv_player_add_bookshelf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="36dp"
                                android:minWidth="48dp"
                                android:minHeight="44dp"
                                android:text="@string/add_bookstore"
                                android:drawablePadding="4dp"
                                android:layout_marginStart="20dp"
                                app:drawableTopCompat="@drawable/icon_player_add_bookshelf"
                                app:layout_constraintEnd_toStartOf="@+id/tv_player_speech_speed"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/iv_player_play"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal"
                                android:id="@+id/tv_player_speech_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="48dp"
                                android:minHeight="44dp"
                                android:text="@string/speech_speed_text"
                                android:drawablePadding="4dp"
                                app:drawableTopCompat="@drawable/icon_player_speech_speed"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_player_add_bookshelf"
                                app:layout_constraintEnd_toStartOf="@+id/tv_player_timer"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toEndOf="@+id/tv_player_add_bookshelf"
                                app:layout_constraintTop_toTopOf="@+id/tv_player_add_bookshelf"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal"
                                android:id="@+id/tv_player_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="48dp"
                                android:minHeight="44dp"
                                android:text="@string/ting_shu_clock"
                                android:drawablePadding="4dp"
                                app:drawableTopCompat="@drawable/icon_player_timer"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_player_add_bookshelf"
                                app:layout_constraintEnd_toStartOf="@+id/tv_player_sound_settings"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toEndOf="@+id/tv_player_speech_speed"
                                app:layout_constraintTop_toTopOf="@+id/tv_player_add_bookshelf"/>
                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:gravity="center_horizontal"
                                android:id="@+id/tv_player_sound_settings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="48dp"
                                android:minHeight="44dp"
                                android:text="@string/voice_setting"
                                android:drawablePadding="4dp"
                                android:layout_marginEnd="20dp"
                                app:drawableTopCompat="@drawable/icon_player_sound_settings"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_player_add_bookshelf"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toEndOf="@+id/tv_player_timer"
                                app:layout_constraintTop_toTopOf="@+id/tv_player_add_bookshelf"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/tv_listen_book_interrupt"
                            android:background="@drawable/border_audio_book_entry_bg"
                            android:padding="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="@string/tts_setting"
                            android:drawablePadding="4dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            app:drawableLeftCompat="@drawable/icon_audio_book_interrupt"
                            app:drawableRightCompat="@drawable/icon_audio_book_interrupt_back"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_recommend_root"
                            android:background="@drawable/border_audio_book_entry_bg"
                            android:paddingBottom="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="12dp">
                                <TextView
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:id="@+id/author_book_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/guess_you_like_listen"
                                    android:singleLine="true"
                                    android:layout_centerVertical="true"/>
                                <RelativeLayout
                                    android:id="@+id/rl_refresh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true">
                                    <TextView
                                        android:textSize="12sp"
                                        android:textColor="@color/white"
                                        android:id="@+id/tv_refresh"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/switch_more"
                                        android:layout_centerVertical="true"/>
                                    <ImageView
                                        android:id="@+id/iv_refresh"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/icon_audio_book_change"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="2dp"
                                        android:layout_toEndOf="@+id/tv_refresh"/>
                                    <ProgressBar
                                        android:id="@+id/book_more_progressbar"
                                        android:visibility="gone"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="2dp"
                                        android:layout_toEndOf="@+id/tv_refresh"
                                        android:progressTint="@color/white"
                                        android:indeterminateTint="@color/white"/>
                                </RelativeLayout>
                            </RelativeLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_grid_books"
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:overScrollMode="never"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ViewStub
                        android:id="@+id/audiobook_ad_view_stub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
