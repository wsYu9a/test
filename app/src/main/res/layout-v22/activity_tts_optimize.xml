<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundType="14">
    <include layout="@layout/layout_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/tts_optimize_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/download_google_tts_engine"
                android:paddingLeft="12dp"
                android:paddingTop="16dp"
                android:paddingRight="12dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginHorizontal="12dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="16dp"
                app:backgroundType="10"
                app:selectableLayout="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.martian.libmars.ui.theme.ThemeTextView
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/download_google_tts"/>
                        <ImageView
                            android:id="@+id/iv_vip"
                            android:layout_width="16dp"
                            android:layout_height="14dp"
                            android:src="@drawable/icon_vip_tag"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                    <com.martian.libmars.ui.theme.ThemeTextView
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/download_google_tts_des"
                        app:textColorType="2"/>
                </LinearLayout>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:gravity="end"
                    android:id="@+id/download_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:text="@string/click_download"
                    android:layout_marginStart="12dp"
                    app:textColorType="2"/>
                <com.martian.libmars.ui.theme.ThemeImageView
                    android:id="@+id/iv_google_tts_more"
                    android:visibility="gone"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/loan_more_black"
                    app:colorFilterType="4"
                    app:enableFilter="true"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.libmars.widget.RoundedLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginHorizontal="12dp"
                app:rlRoundBottomLeft="true"
                app:rlRoundBottomRight="true"
                app:rlRoundTopLeft="true"
                app:rlRoundTopRight="true"
                app:rlRoundedCornerRadius="8dp"
                app:rlRoundingElevation="2dp">
                <com.martian.libmars.ui.theme.ThemeLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundType="10">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@color/theme_default"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:alpha="0.1"
                            app:layout_constraintBottom_toBottomOf="@+id/cl_guide"
                            app:layout_constraintEnd_toEndOf="@+id/cl_guide"
                            app:layout_constraintStart_toStartOf="@+id/cl_guide"
                            app:layout_constraintTop_toTopOf="@+id/cl_guide"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_guide"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:paddingHorizontal="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <com.martian.libmars.ui.theme.ThemeTextView
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:id="@+id/tv_guide_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="不知道怎么开启？"
                                android:layout_marginStart="2dp"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintEnd_toStartOf="@+id/tv_guide_picture"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <com.martian.libmars.ui.theme.ThemeTextView
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:id="@+id/bd_reading"
                                android:background="@drawable/border_button_round_default"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                android:text="@string/tts_guide_with_picture"
                                android:includeFontPadding="false"
                                android:drawableEnd="@drawable/icon_tts_guide_start"
                                android:paddingStart="8dp"
                                android:paddingEnd="4dp"
                                android:paddingVertical="3dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tv_guide_title"
                                app:selectableItem="true"
                                app:textColorType="-1"/>
                            <ImageView
                                android:id="@+id/tv_guide_picture"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/tts_guide_picture"
                                android:scaleType="fitXY"
                                app:layout_constraintDimensionRatio="108:84"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.martian.libmars.ui.theme.ThemeLinearLayout>
            </com.martian.libmars.widget.RoundedLayout>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:text="@string/tts_optimize_hint"
                android:layout_marginHorizontal="12dp"
                app:textColorType="2"/>
        </LinearLayout>
    </ScrollView>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
