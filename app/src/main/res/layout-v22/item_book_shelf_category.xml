<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp">
        <com.martian.libmars.ui.theme.ThemeImageView
            android:id="@+id/iv_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_book_shelf_category_folder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="16sp"
            android:ellipsize="end"
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginStart="4dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon"
            app:layout_constraintRight_toLeftOf="@+id/tv_book_count"
            app:layout_constraintTop_toTopOf="@+id/iv_icon"/>
        <ImageView
            android:id="@+id/iv_vip"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="14dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icon_vip_tag"
            android:layout_marginStart="4dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/tv_category_name"
            app:layout_constraintEnd_toStartOf="@+id/tv_book_count"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/tv_category_name"
            app:layout_constraintTop_toTopOf="@+id/tv_category_name"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="14sp"
            android:id="@+id/tv_book_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_icon"
            app:textColorType="2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        app:colorFilterType="7"
        app:enableFilter="true"/>
</RelativeLayout>
