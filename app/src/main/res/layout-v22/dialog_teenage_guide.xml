<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.martian.libmars.widget.RoundedLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:rlRoundBottomLeft="false"
        app:rlRoundBottomRight="false"
        app:rlRoundTopLeft="true"
        app:rlRoundTopRight="true"
        app:rlRoundedCornerRadius="16dp">
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:orientation="vertical"
            android:id="@+id/teenage_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/day_text_color_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_teenager"
                    android:layout_centerHorizontal="true"/>
                <com.martian.libmars.ui.theme.ThemeImageView
                    android:id="@+id/teenage_close"
                    android:padding="4dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/icon_rules_close"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    app:colorFilterType="2"/>
            </RelativeLayout>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/teenage_guide_dialog_hint"
                android:lineSpacingMultiplier="1.2"
                android:paddingHorizontal="16dp"
                app:textColorType="1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/teenage_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:textColor="@color/day_text_color_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teenage_guide_dialog_go"
                    app:textColorType="1"/>
                <com.martian.libmars.ui.theme.ThemeImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/loan_more"
                    app:colorFilterType="3"/>
            </LinearLayout>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/teenage_button"
                android:background="@drawable/border_button_round_default"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:text="@string/known"
                app:selectableItem="true"
                app:textColorType="-1"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
    </com.martian.libmars.widget.RoundedLayout>
</RelativeLayout>
