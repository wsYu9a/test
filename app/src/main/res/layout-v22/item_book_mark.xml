<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tv_chapter_title"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:layout_marginHorizontal="20dp"/>
        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:paddingRight="12dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="15dp"
            app:readerBackgroundType="22">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/iv_mark_type"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_reading_book_mark"
                android:scaleType="fitXY"/>
            <com.martian.mibook.mvvm.widget.UnderLineTextView
                android:textSize="14sp"
                android:ellipsize="end"
                android:id="@+id/tv_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.25"
                android:layout_marginStart="8dp"
                app:underlineTopMargin="2dp"
                app:underlineWidth="1.5dp"/>
        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
    </LinearLayout>
</LinearLayout>
