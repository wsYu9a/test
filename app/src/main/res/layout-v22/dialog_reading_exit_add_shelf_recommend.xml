<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.widget.RoundedLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rlRoundBottomLeft="false"
    app:rlRoundBottomRight="false"
    app:rlRoundTopLeft="true"
    app:rlRoundTopRight="true"
    app:rlRoundedCornerRadius="16dp">
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingRight="20dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            app:backgroundType="14">
            <com.martian.libmars.widget.BookCoverImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_book_cover"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:bookCoverDrawable="@drawable/cover_loading_default_day"
                app:cornerRadiusBottomLeft="4dp"
                app:cornerRadiusBottomRight="8dp"
                app:cornerRadiusTopLeft="4dp"
                app:cornerRadiusTopRight="8dp"
                app:selectableCoverType="2"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_book_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/same_like_books"
                app:textColorType="2"/>
            <RelativeLayout
                android:id="@+id/rl_switch_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_title"
                android:layout_alignBottom="@+id/tv_title"
                android:layout_alignParentEnd="true">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="12sp"
                    android:textColor="@color/theme_default"
                    android:gravity="center"
                    android:id="@+id/tv_switch_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/switch_more"
                    app:selectableItem="true"
                    app:textColorType="-1"/>
                <ProgressBar
                    android:id="@+id/tv_switch_more_progressbar"
                    android:visibility="invisible"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/tv_switch_more"
                    android:indeterminateTint="@color/theme_default"
                    style="?android:attr/progressBarStyleSmall"/>
                <com.martian.libmars.ui.theme.ThemeImageView
                    android:id="@+id/tv_switch_more_loan"
                    android:visibility="visible"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_bookmall_refresh"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/more_source"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/tv_switch_more"
                    app:colorFilterType="6"/>
            </RelativeLayout>
        </RelativeLayout>
        <com.martian.mibook.ui.MyGridView
            android:id="@+id/exit_dialog_books"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:listSelector="@color/transparent"
            android:layout_marginVertical="6dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="22dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:backgroundType="3">
                <com.martian.libmars.ui.theme.ThemeLinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/ll_exit_reading"
                    android:background="?android:attr/windowBackground"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundType="8"
                    app:selectableLayout="true">
                    <com.martian.libmars.ui.theme.ThemeTextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exit_reading"
                        app:textColorType="1"/>
                </com.martian.libmars.ui.theme.ThemeLinearLayout>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_add_shelf"
                android:background="@drawable/border_button_round_default"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_bookstore"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:selectableItem="true"
                app:textColorType="-1"/>
        </LinearLayout>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</com.martian.libmars.widget.RoundedLayout>
