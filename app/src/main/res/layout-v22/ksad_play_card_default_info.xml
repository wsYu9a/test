<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="278dp"
    android:layout_height="wrap_content">
    <com.kwad.components.core.widget.KSCornerImageView
        android:id="@+id/ksad_splash_default_icon"
        android:layout_width="53dp"
        android:layout_height="53dp"/>
    <TextView
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:id="@+id/ksad_splash_default_title"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="11dp"
        android:maxWidth="278dp"
        android:singleLine="true"/>
    <ImageView
        android:id="@+id/ksad_splash_default_img"
        android:layout_width="278dp"
        android:layout_height="264dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ksad_splash_default_icon"/>
    <TextView
        android:textSize="19sp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/ksad_splash_default_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxWidth="278dp"
        android:maxLines="2"
        android:lineHeight="28dp"/>
    <TextView
        android:textSize="8sp"
        android:textColor="#bdbdbd"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/ksad_splash_default_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxWidth="278dp"
        android:text="*实际福利以活动详情为准"
        android:maxLines="1"/>
</LinearLayout>
