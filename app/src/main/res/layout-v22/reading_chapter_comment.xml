<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/chapter_comment_real_view"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
        android:id="@+id/chapter_post_comment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        app:readerBackgroundType="16"
        app:selectableItemLayout="true">
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="16sp"
            android:textColor="@color/day_text_color_thirdly"
            android:gravity="center"
            android:id="@+id/chapter_comment"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/chapter_comment_sofa"
            android:paddingVertical="12dp"
            app:readerTextColorType="-1"/>
    </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
    <com.martian.libmars.widget.RoundedLayout
        android:id="@+id/chapter_end_comments_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        app:rlRoundBottomLeft="true"
        app:rlRoundBottomRight="true"
        app:rlRoundTopLeft="true"
        app:rlRoundTopRight="true"
        app:rlRoundedCornerRadius="8dp">
        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
            android:orientation="vertical"
            android:id="@+id/chapter_end_comments_click_view"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="12dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"
            app:readerBackgroundType="19"
            app:selectableItemLayout="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hot_chapter_comments"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:id="@+id/chapter_end_comments_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:readerTextColorType="2"/>
                    <com.martian.mibook.ui.reader.ReaderThemeImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/loan_more"
                        android:layout_marginStart="2dp"
                        app:readerImageColorFilterType="2"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chapter_end_comments_header"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:id="@+id/chapter_end_comments_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        app:readerTextColorType="2"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:id="@+id/chapter_end_comments_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="2"
                        android:lineSpacingMultiplier="1.35"/>
                </LinearLayout>
            </LinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/chapter_end_comments_post"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:readerBackgroundType="16">
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_post_comment"
                    app:readerImageColorFilterType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/join_chapter_comment"
                    android:layout_marginStart="4dp"
                    app:readerTextColorType="2"/>
            </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
    </com.martian.libmars.widget.RoundedLayout>
</LinearLayout>
