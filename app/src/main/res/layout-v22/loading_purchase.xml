<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            app:readerBackgroundType="25">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/tv_buy_reading_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onBackClick">
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_activity_back"
                    app:readerImageColorFilterType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:id="@+id/tv_buy_reading_book_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    app:readerTextColorType="2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:id="@+id/tv_buy_reading_title"
                    android:paddingTop="12dp"
                    android:paddingBottom="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_activity_main"
                    android:maxLines="2"
                    app:readerTextColorType="1"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:id="@+id/tv_buy_reading_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/title_activity_main"
                    android:maxLines="4"
                    android:lineSpacingMultiplier="1.3"
                    app:readerTextColorType="1"/>
            </LinearLayout>
        </LinearLayout>
        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:readerBackgroundType="25"/>
    </RelativeLayout>
    <com.martian.mibook.ui.reader.ReaderThemeRelativeLayout
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingHorizontal="24dp"
        app:rBackgroundType="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_unlock_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginHorizontal="9dp">
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    app:readerImageColorFilterType="7"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:id="@+id/tv_buy_reading_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/purchase_guide"
                    android:layout_marginHorizontal="8dp"
                    app:readerTextColorType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    app:readerImageColorFilterType="8"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/price_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chapter_price"
                        app:readerTextColorType="1"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:id="@+id/tv_buy_reading_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:readerTextColorType="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/account_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_book_coins"
                        app:readerTextColorType="1"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:id="@+id/tv_buy_account_book_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:readerTextColorType="3"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/tv_buy_auto_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.martian.mibook.ui.reader.ReaderThemeImageView
                        android:id="@+id/tv_buy_auto"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/btn_check_off_default"
                        app:readerImageColorFilterType="3"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:paddingBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_buy_next_chapter"
                        android:layout_marginStart="4dp"
                        app:readerTextColorType="2"/>
                </LinearLayout>
                <com.martian.mibook.ui.reader.ReaderThemeItemTextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/tv_buy_reading_purchase"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/confirm_buy"
                    android:paddingVertical="12dp"
                    app:isButton="1"/>
                <com.martian.mibook.ui.reader.ReaderThemeItemTextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/tv_buy_reading_purchase_video"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/purchase_by_video"
                    android:paddingVertical="12dp"
                    app:isButton="2"/>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:id="@+id/tv_buy_with_ad"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:alpha="0.6">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/free_read_with_ad"
                        app:readerTextColorType="2"/>
                    <com.martian.mibook.ui.reader.ReaderThemeImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/loan_more"
                        android:layout_marginStart="2dp"
                        app:readerImageColorFilterType="2"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_vip_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginHorizontal="9dp">
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    app:readerImageColorFilterType="7"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/purchase_guide_2"
                    android:layout_marginHorizontal="8dp"
                    app:readerTextColorType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    app:readerImageColorFilterType="8"/>
            </LinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_buy_vip_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"/>
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center"
                android:id="@+id/ll_buy_vip"
                android:background="@drawable/shape_vip_button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingVertical="12dp"
                app:backgroundType="-1"
                app:selectableLayout="true">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/vip_text_color_primary"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_vip_unlock_text"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeItemTextView
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/tv_buy_vip_purchase_video"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/purchase_by_video"
                android:paddingVertical="12dp"
                app:isButton="2"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/tv_free_read_with_ad"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0.6">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/free_read_with_ad"
                    app:readerTextColorType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/loan_more"
                    android:layout_marginStart="2dp"
                    app:readerImageColorFilterType="2"/>
            </LinearLayout>
        </LinearLayout>
    </com.martian.mibook.ui.reader.ReaderThemeRelativeLayout>
</LinearLayout>
