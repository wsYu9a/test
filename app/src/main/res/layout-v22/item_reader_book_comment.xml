<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_header"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:id="@+id/iv_comment_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        app:colorFilterType="7"
        app:enableFilter="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/csl_user_info"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_user_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_user_header"
        app:layout_constraintTop_toTopOf="@+id/iv_user_header">
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="14sp"
            android:ellipsize="end"
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:readerTextColorType="2"/>
        <com.martian.mibook.mvvm.widget.ExpLevelLabel
            android:id="@+id/iv_exp_level"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toEndOf="@+id/tv_nickname"
            app:layout_constraintTop_toTopOf="@+id/tv_nickname"/>
        <ImageView
            android:id="@+id/iv_vip_tag"
            android:visibility="visible"
            android:layout_width="21dp"
            android:layout_height="14dp"
            android:src="@drawable/icon_vip_tag_opened"
            android:contentDescription="@string/app_name"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toEndOf="@+id/iv_exp_level"
            app:layout_constraintTop_toTopOf="@+id/tv_nickname"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_tag"
            android:background="@drawable/border_button_round_default"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/mine"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toEndOf="@+id/iv_vip_tag"
            app:layout_constraintTop_toTopOf="@+id/tv_nickname"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_sift"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/comment_icon_sift"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_score"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickname">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_vote_1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_vote_2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_vote_3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_vote_4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_vote_5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="12sp"
                android:ellipsize="end"
                android:id="@+id/tv_read_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginStart="4dp"
                app:readerTextColorType="2"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/rl_reader_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_user_header"
        app:layout_constraintTop_toBottomOf="@+id/csl_user_info">
        <com.martian.mibook.ui.reader.ReaderGradientExpandableTextView
            android:textSize="15sp"
            android:id="@+id/tv_reader_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:lineSpacingMultiplier="1.2"
            app:gradientWidth="36sp"
            app:handleWidth="32sp"/>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="14sp"
            android:id="@+id/tv_reader_comment_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expand"
            android:layout_alignBottom="@+id/tv_reader_comment"
            android:layout_alignEnd="@+id/tv_reader_comment"
            app:readerTextColorType="2"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_time_reply_vote"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingVertical="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_user_header"
        app:layout_constraintTop_toBottomOf="@+id/rl_reader_comment">
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="12sp"
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:readerTextColorType="2"/>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="12sp"
            android:id="@+id/tv_reply_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reply"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_comment_time"
            app:layout_constraintTop_toTopOf="parent"
            app:readerTextColorType="2"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_vote_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/tv_reply_num"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_vote_up_count"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/vote_upcount"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_vote_up_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_more_reply"
        android:paddingTop="6dp"
        android:paddingBottom="7dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cl_time_reply_vote"
        app:layout_constraintTop_toBottomOf="@+id/cl_time_reply_vote">
        <com.martian.libmars.ui.theme.ThemeImageView
            android:id="@+id/iv_more_line"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="12sp"
            android:id="@+id/tv_more_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:readerTextColorType="2"/>
        <com.martian.mibook.ui.reader.ReaderThemeImageView
            android:id="@+id/iv_more_reply"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_comment_expand_down"
            android:layout_marginStart="4dp"
            app:readerImageColorFilterType="2"
            app:readerImageSelectableImageType="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
