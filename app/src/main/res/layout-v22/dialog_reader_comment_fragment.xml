<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.widget.RoundedLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    app:rlRoundBottomLeft="false"
    app:rlRoundBottomRight="false"
    app:rlRoundTopLeft="true"
    app:rlRoundTopRight="true"
    app:rlRoundedCornerRadius="16dp">
    <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/iv_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_more"
                android:layout_centerVertical="true"
                app:selectableImageType="1"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter_comments"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
            android:orientation="vertical"
            android:id="@+id/book_comment_view"
            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:paddingRight="24dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            app:readerBackgroundType="22">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="bottom"
                        android:id="@+id/book_vote_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="31dp"
                        android:text="@string/empty_grade"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:id="@+id/book_vote_score_hint"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_short"
                        android:layout_marginStart="2dp"/>
                </LinearLayout>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:id="@+id/book_comment_vote_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_post_comment_star"
                    android:contentDescription="@string/app_name"
                    android:layout_marginEnd="2dp"
                    app:readerImageColorFilterType="3"
                    app:readerImageSelectableImageType="1"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:id="@+id/book_comment_vote_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_post_comment_star"
                    android:contentDescription="@string/app_name"
                    android:layout_marginEnd="2dp"
                    app:readerImageColorFilterType="3"
                    app:readerImageSelectableImageType="1"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:id="@+id/book_comment_vote_3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_post_comment_star"
                    android:contentDescription="@string/app_name"
                    android:layout_marginEnd="2dp"
                    app:readerImageColorFilterType="3"
                    app:readerImageSelectableImageType="1"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:id="@+id/book_comment_vote_4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_post_comment_star"
                    android:contentDescription="@string/app_name"
                    android:layout_marginEnd="2dp"
                    app:readerImageColorFilterType="3"
                    app:readerImageSelectableImageType="1"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:id="@+id/book_comment_vote_5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_post_comment_star"
                    android:contentDescription="@string/app_name"
                    app:readerImageColorFilterType="3"
                    app:readerImageSelectableImageType="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:id="@+id/book_comment_score_tips"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/comment_guide"
                    android:layout_weight="1"
                    app:readerTextColorType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:id="@+id/book_comment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/touch_to_comment"
                    app:readerTextColorType="2"/>
            </LinearLayout>
        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="20dp">
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/chapter_comment_desc"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whole_chapter_comments"
                android:paddingVertical="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="14sp"
                android:id="@+id/chapter_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/chapter_comment_desc"
                app:layout_constraintStart_toEndOf="@+id/chapter_comment_desc"
                app:layout_constraintTop_toTopOf="@+id/chapter_comment_desc"
                app:readerTextColorType="2"/>
            <com.martian.libmars.utils.tablayout.MagicIndicator
                android:id="@+id/magic_indicator_comment"
                android:layout_width="84dp"
                android:layout_height="0dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/chapter_comment_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/chapter_comment_number"
                app:layout_constraintTop_toTopOf="@+id/chapter_comment_desc"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/chapter_comment_post"
                app:layout_constraintTop_toTopOf="parent"
                app:srlEnableNestedScrolling="false">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_comment"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.scwang.smart.refresh.layout.SmartRefreshLayout>
            <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                android:orientation="horizontal"
                android:id="@+id/chapter_comment_post"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/iv_bottom_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/chapter_comment_post_view"
                    android:paddingLeft="16dp"
                    android:paddingTop="9dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:readerBackgroundType="16">
                    <com.martian.mibook.ui.reader.ReaderThemeImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/icon_post_comment"
                        app:readerImageColorFilterType="2"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:id="@+id/chapter_comment_post_hint"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/join_chapter_comment"
                        android:layout_marginStart="4dp"
                        app:readerTextColorType="2"/>
                </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
            </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/iv_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                app:colorFilterType="7"
                app:enableFilter="true"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <com.martian.mibook.mvvm.read.widget.ReaderLoadingTip
                android:gravity="center"
                android:id="@+id/comment_loading_tip"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
</com.martian.libmars.widget.RoundedLayout>
