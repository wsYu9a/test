<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.widget.RoundedLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    app:rlRoundBottomLeft="false"
    app:rlRoundBottomRight="false"
    app:rlRoundTopLeft="true"
    app:rlRoundTopRight="true"
    app:rlRoundedCornerRadius="16dp">
    <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="8dp"
            android:paddingVertical="20dp">
            <com.martian.libmars.widget.BookCoverImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_book_cover"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                app:bookCoverDrawable="@drawable/cover_loading_default_day"
                app:cornerRadiusBottomLeft="4dp"
                app:cornerRadiusBottomRight="8dp"
                app:cornerRadiusTopLeft="4dp"
                app:cornerRadiusTopRight="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:selectableCoverType="2"/>
            <TextView
                android:textSize="5sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:id="@+id/tv_cover_book_name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:lineSpacingMultiplier="1.1"
                app:layout_constrainedHeight="true"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_book_cover"
                app:layout_constraintEnd_toEndOf="@+id/iv_book_cover"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/iv_book_cover"
                app:layout_constraintTop_toTopOf="@+id/iv_book_cover"
                app:layout_constraintVertical_bias="0"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:id="@+id/tv_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginStart="12dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/tv_book_des"
                app:layout_constraintEnd_toStartOf="@+id/iv_right"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/iv_book_cover"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/iv_right"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_account_more"
                android:layout_marginEnd="10dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_book_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rl_download"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/tv_book_name"
                app:layout_constraintTop_toTopOf="@+id/tv_book_name"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="14sp"
                android:id="@+id/tv_book_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rl_download"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/iv_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_name"
                app:layout_constraintVertical_bias="0"
                app:readerTextColorType="2"/>
            <RelativeLayout
                android:id="@+id/rl_download"
                android:layout_width="80dp"
                android:layout_height="34dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.martian.libmars.widget.DownLoadButton
                    android:id="@+id/download_btn"
                    android:layout_width="68dp"
                    android:layout_height="26dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    app:border_color="@color/theme_default"
                    app:border_radius="13dp"
                    app:border_show="false"
                    app:download_textSize="14sp"
                    app:drawable="@drawable/audio_book_download"
                    app:finish_color="@color/theme_default"
                    app:loading_progress_color="@color/theme_default"
                    app:progress_textSize="14sp"
                    app:text_color="@color/white"/>
                <ImageView
                    android:id="@+id/download_btn_vip_tag"
                    android:layout_width="24dp"
                    android:layout_height="14dp"
                    android:src="@drawable/icon_vip_tag"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.martian.libmars.utils.tablayout.MagicIndicator
            android:id="@+id/magic_indicator"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"/>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
</com.martian.libmars.widget.RoundedLayout>
