<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/ksad_banner_item_content"
        android:layout_width="96dp"
        android:layout_height="54dp"
        android:layout_margin="4dp">
        <ImageView
            android:id="@+id/ksad_banner_item_image_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/ksad_banner_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.kwad.components.core.widget.KsLogoView
            android:layout_gravity="bottom|left"
            android:id="@+id/ksad_banner_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/ksad_banner_item_info"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:minWidth="120dp"
        android:layout_marginStart="4dp">
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:ellipsize="end"
            android:layout_gravity="left"
            android:id="@+id/ksad_banner_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#666666"
            android:ellipsize="end"
            android:layout_gravity="left"
            android:id="@+id/ksad_banner_item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ksad_banner_button_base"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/ksad_banner_item_button"
            android:background="@drawable/ksad_button_bg"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ksad_banner_item_close"
            android:background="@drawable/ksad_close_bg"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>
</LinearLayout>
