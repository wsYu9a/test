<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_reward_video_root"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_reward_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.vlion.ad.inland.ad.view.video.VlionBaseVideoView
            android:layout_gravity="center"
            android:id="@+id/vlionBaseVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/vlion_ad_reward_model_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/vlion_loadinglayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/vlion_progressBar_circle"
                android:background="#00000000"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:indeterminateTint="#ffffffff"
                style="@style/Vlion.ProgressBar"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/vlion_redownload_layout"
                android:background="#4d000000"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/vlion_video_redownload"
                    android:layout_width="65dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:background="#4d000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="加载异常,点击重新加载"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="70dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/vlion_cn_ad_rectangle_close_bg"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:paddingEnd="7dp">
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/vlion_cn_ad_icon"/>
                <View
                    android:background="@color/vlion_custom_white_font_color"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
                <cn.vlion.ad.inland.ad.view.video.VolumeControlView
                    android:id="@+id/soundView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
            </LinearLayout>
            <cn.vlion.ad.inland.ad.view.video.VlionTimeView
                android:layout_gravity="end"
                android:id="@+id/vlion_time_view"
                android:background="@drawable/vlion_cn_ad_rectangle_close_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <cn.vlion.ad.inland.ad.view.active.VlionAdClosedView
            android:layout_gravity="end"
            android:id="@+id/vlion_ad_closed"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="25dp"/>
    </FrameLayout>
    <cn.vlion.ad.inland.ad.view.video.VlionVideoEndCardView
        android:layout_gravity="center"
        android:id="@+id/vlionVideoEndcardView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <cn.vlion.ad.inland.ad.view.video.VlionVideoSkipDialogView
        android:id="@+id/ll_video_skip_show"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <cn.vlion.ad.inland.ad.view.download.VlionDownLoadSecondConfirmView
        android:id="@+id/vlionDownLoadSecondConfirmView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
