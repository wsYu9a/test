<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#cc000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ksad_app_icon"
        android:background="@drawable/ksad_video_app_16_bg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ksad_default_app_icon"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="21dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/ksad_app_name"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:layout_below="@+id/ksad_app_icon"
        android:layout_centerHorizontal="true"/>
    <com.kwad.components.ad.widget.AppScoreView
        android:id="@+id/ksad_app_score"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ksad_app_name"
        android:layout_centerHorizontal="true"/>
    <com.kwad.components.ad.widget.KsAppTagsView
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ksad_reward_apk_info_tags"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ksad_reward_apk_info_card_tags_height"
        android:layout_marginTop="10dp"
        android:divider="@drawable/ksad_reward_apk_tags_divider"
        android:layout_below="@+id/ksad_app_score"
        android:showDividers="middle"/>
    <TextView
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/ksad_app_download_count"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:layout_below="@+id/ksad_reward_apk_info_tags"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/ksad_app_introduce"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_below="@+id/ksad_app_download_count"
        android:layout_centerHorizontal="true"/>
    <com.kwad.components.core.page.widget.TextProgressBar
        android:id="@+id/ksad_download_bar"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="188dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/ksad_video_actionbar_app_progress"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <FrameLayout
        android:id="@+id/ksad_reward_apk_info_install_container"
        android:background="@drawable/ksad_reward_install_btn_bg"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="40dp"
        android:indeterminateOnly="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:id="@+id/ksad_reward_apk_info_install_start"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:id="@+id/ksad_reward_apk_info_install_action"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </FrameLayout>
</RelativeLayout>
