<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:id="@+id/jad_native_insert_ad_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/vlion_ad_inter_model_container"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17dp"
                android:textColor="#000000"
                android:id="@+id/vlion_jd_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#000000"
                android:id="@+id/vlion_jd_ad_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"/>
            <ImageView
                android:id="@+id/jad_native_insert_ad_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:scaleType="fitXY"
                android:minHeight="160dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/vlion_jd_button"
                android:background="@drawable/vlion_jd_cn_ad_button_blud_solid_20dp_bg"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/vlion_jd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击查看"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="end"
            android:id="@+id/vlion_jad_close"
            android:background="@drawable/vlion_jd_cn_ad_rectangle_close_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:minWidth="22dp"
            android:minHeight="22dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/vilon_close"
                android:background="@drawable/vlion_jd_cn_ad_closed"
                android:layout_width="8dp"
                android:layout_height="8dp"/>
        </FrameLayout>
        <LinearLayout
            android:layout_gravity="start|bottom"
            android:background="@drawable/vlion_cn_ad_background"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/advert_icon"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/vlion_menta_ad_icon"
                android:scaleType="fitCenter"/>
            <TextView
                android:textSize="8dp"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/advert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广告"
                android:layout_marginStart="1dp"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
