<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/dialog_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_centerVertical="true">
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundType="6">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="确认信息"
                android:layout_centerInParent="true"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="16dp"
                android:gravity="center"
                android:id="@+id/dialog_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lineSpacingMultiplier="1.3"
                app:textColorType="1"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/dialog_textColor"
                android:gravity="center"
                android:id="@+id/dialog_notarize"
                android:background="@drawable/border_button_round_default"
                android:paddingTop="9dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                android:text="确认"
                app:selectableItem="true"
                app:textColorType="-1"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:id="@+id/dialog_close"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/icon_rules_close"
            android:layout_alignParentRight="true"
            app:colorFilterType="4"
            app:enableFilter="true"
            app:selectableImageType="1"/>
    </RelativeLayout>
</RelativeLayout>
