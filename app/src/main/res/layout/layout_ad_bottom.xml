<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feed_ad_bottom_view_close_wh">
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_99999"
        android:id="@+id/tv_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_ad_bottom_view_margin_left"
        android:text="广告"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ll_close"
        android:layout_width="@dimen/feed_ad_bottom_view_close_wh"
        android:layout_height="@dimen/feed_ad_bottom_view_close_wh"
        android:layout_marginRight="@dimen/feed_ad_bottom_view_close_margin_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close"/>
    </LinearLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/color_99999"
        android:ellipsize="end"
        android:id="@+id/tv_ad_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_ad_bottom_view_tv_ad_name_margin_left"
        android:text=""
        android:lines="1"
        android:layout_toLeftOf="@+id/ll_close"
        android:layout_toRightOf="@+id/tv_ad"
        android:layout_centerVertical="true"/>
</RelativeLayout>
