<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ksad_interstitial_intercept_dialog_bg"
        android:layout_width="271dp"
        android:layout_height="305dp">
        <com.kwad.components.core.widget.KSCornerImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/ksad_interstitial_intercept_app_icon"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            app:ksad_radius="4dp"/>
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/ksad_text_black_222"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ksad_interstitial_intercept_app_title"
            android:padding="5dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/ksad_black_6c"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ksad_interstitial_intercept_dialog_desc"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:maxLines="2"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/ksad_reward_main_color"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/ksad_interstitial_intercept_dialog_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/ksad_see_detail"
            android:maxLines="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="24"/>
        <com.kwad.components.core.widget.KsStyledTextButton
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ksad_interstitial_intercept_dialog_btn_continue"
            android:background="@drawable/ksad_interstitial_btn_watch_continue_bg"
            android:layout_width="207dp"
            android:layout_height="46dp"
            android:text="@string/ksad_watch_continue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="13"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/ksad_gray_9c"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ksad_interstitial_intercept_dialog_btn_deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ksad_leave_persist"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="24"/>
    </LinearLayout>
</FrameLayout>
