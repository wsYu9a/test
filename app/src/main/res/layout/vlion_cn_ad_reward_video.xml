<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_reward_video_root"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_reward_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:layout_gravity="center"
            android:id="@+id/sv_videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="end|top"
            android:id="@+id/btn_jump"
            android:background="@drawable/vlion_cn_ad_jump_background"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="35dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="35dp"/>
        <cn.vlion.ad.inland.ad.view.video.VolumeControlView
            android:id="@+id/iv_sound_interstitial"
            android:visibility="visible"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="35dp"/>
        <include
            android:layout_gravity="end|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginEnd="35dp"
            layout="@layout/vlion_cn_ad_call_action"/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/rl_end_card"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_end_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include
            android:layout_gravity="end"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            layout="@layout/vlion_cn_ad_white_close"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/ll_video_skip_show"
        android:background="#80000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/vlion_cn_ad_white_radius_7dp_bg"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="600dp"
            android:minWidth="300dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/vilon_tv_left_time_des"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/vilon_tv_continue"
                android:background="@drawable/vlion_cn_ad_button_blue_radius_23dp_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:text="继续观看"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/vilon_tv_exit"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:text="坚持退出"/>
        </LinearLayout>
    </LinearLayout>
    <include
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        layout="@layout/vlion_cn_ad_icon"/>
</FrameLayout>
