<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:visibility="gone"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.martian.libmars.ui.theme.ThemeView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:viewBackgroundType="1"/>
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/bp_flag_top_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundType="8"
            app:selectableLayout="true">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_batch_top"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="10sp"
                android:id="@+id/bp_flag_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/book_top"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/batch_detail_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundType="8"
            app:selectableLayout="true">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_batch_detail"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="10sp"
                android:id="@+id/batch_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/detail"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/bp_category_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundType="8"
            app:selectableLayout="true">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_batch_category"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="10sp"
                android:id="@+id/bp_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/category_to"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/bp_delete_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundType="8"
            app:selectableLayout="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_batch_delete"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/bonus_red"
                android:id="@+id/bp_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/cd_delete"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</LinearLayout>
