<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.martian.libmars.ui.theme.ThemeTextView
        android:textSize="18sp"
        android:id="@+id/bonus_ads_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    <com.martian.libmars.widget.RoundedLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        app:rlRoundBottomLeft="true"
        app:rlRoundBottomRight="true"
        app:rlRoundTopLeft="true"
        app:rlRoundTopRight="true"
        app:rlRoundedCornerRadius="8dp">
        <ImageView
            android:id="@+id/bonus_ads_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_loading_default_horizontal"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"/>
        <FrameLayout
            android:id="@+id/iv_ads_video"
            android:background="@drawable/bg_ads_icon"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal"
            android:background="@drawable/bg_ads_icon_large"
            android:paddingLeft="2dp"
            android:paddingTop="1dp"
            android:paddingRight="2dp"
            android:paddingBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_ads_logo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_ads_csj"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:textSize="9sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_ads_logo_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ads"/>
        </LinearLayout>
    </com.martian.libmars.widget.RoundedLayout>
    <com.martian.libmars.ui.theme.ThemeTextView
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/fr_option_button"
        android:background="@drawable/border_button_round_default"
        android:paddingLeft="64dp"
        android:paddingTop="8dp"
        android:paddingRight="64dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/mission_forward"
        app:selectableItem="false"
        app:textColorType="-1"/>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
