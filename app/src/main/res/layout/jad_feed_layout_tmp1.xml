<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/jad_feed_white"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14dp"
            android:textColor="#000000"
            android:id="@+id/jad_feed_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            android:text=""
            android:singleLine="true"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#979797"
            android:gravity="end|bottom"
            android:layout_gravity="center_vertical"
            android:id="@+id/jad_feed_close"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="âœ•"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/jad_feed_image"
            android:background="@color/jad_feed_color_accent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/jad_logo"
            android:layout_width="32dp"
            android:layout_height="12dp"
            android:src="@drawable/jad_feed_logo_default"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#007aff"
            android:gravity="center"
            android:id="@+id/jad_feed_download"
            android:background="@drawable/jad_feed_border_download_btn"
            android:layout_width="53dp"
            android:layout_height="18dp"
            android:layout_marginTop="2dp"
            android:text="@string/jad_download_now"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
