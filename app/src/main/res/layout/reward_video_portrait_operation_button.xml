<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reward_video_ad_stub_view"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_status_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/rl_operation_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tanx_reward_time_h"
        android:layout_marginLeft="@dimen/reward_video_portrait_skip_rightMargin"
        android:layout_marginTop="@dimen/default_status_bar_height"
        android:layout_marginRight="@dimen/reward_video_portrait_skip_rightMargin"
        android:layout_below="@+id/view_status_bar">
        <ImageView
            android:id="@+id/iv_voice"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/ic_voice"
            android:onClick="onClick"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_reward_video_play"
            android:background="@drawable/xadsdk_bg_paster_watchad"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tanx_reward_time_h"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv_voice"
            android:onClick="onClick">
            <ImageView
                android:id="@+id/iv_play"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_play"/>
            <TextView
                android:textSize="@dimen/reward_video_portrait_count_fontSize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_reward_video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="继续播放"
                android:lines="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_reward_video_ad_count_down"
            android:background="@drawable/xadsdk_bg_paster_watchad"
            android:paddingLeft="2dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tanx_reward_time_h"
            android:layout_alignParentRight="true"
            android:onClick="onClick">
            <TextView
                android:textSize="@dimen/reward_video_portrait_count_fontSize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_reward_count_down"
                android:padding="0dp"
                android:visibility="visible"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:lines="1"/>
            <TextView
                android:textSize="@dimen/reward_video_portrait_count_fontSize"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_reward_count_down_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="后可领取"
                android:lines="1"/>
            <ImageView
                android:id="@+id/iv_close"
                android:visibility="visible"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/ic_close"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_reward_video_feed_back"
            android:background="@drawable/xadsdk_bg_paster_watchad"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tanx_reward_time_h"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_reward_video_ad_count_down"
            android:onClick="onClick">
            <TextView
                android:textSize="@dimen/reward_video_portrait_count_fontSize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_reward_video_feed_back"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反馈"
                android:lines="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
