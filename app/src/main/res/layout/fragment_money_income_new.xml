<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:id="@+id/tv_money_income_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_income"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.martian.libmars.widget.CountUpTextView
                android:textSize="36sp"
                android:textStyle="bold"
                android:id="@+id/ctv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:singleLine="true"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_money_income_text"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/tv_more"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/icon_mission_center_arrow_right"
                android:layout_marginStart="9dp"
                app:layout_constraintBottom_toBottomOf="@+id/ctv_money"
                app:layout_constraintStart_toEndOf="@+id/ctv_money"
                app:layout_constraintTop_toTopOf="@+id/ctv_money"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:id="@+id/tv_withdrawal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/withdraw"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/icon_wx_withdrawal"
                android:paddingStart="16dp"
                android:paddingEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/ctv_money"
                app:layout_constraintEnd_toEndOf="parent"
                app:textBackgroundType="5"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/cl_exchange_layout"
                android:background="@drawable/bg_mission_center_exchange_layout_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ctv_money">
                <ImageView
                    android:id="@+id/iv_coins"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_coins"
                    android:layout_marginStart="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_now_exchange"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/iv_coins"
                    app:layout_constraintTop_toTopOf="parent">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/mission_center_text_color_default"
                            android:ellipsize="end"
                            android:id="@+id/tv_coins_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"/>
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/iv_coins_question"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/icon_coins_question"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/coins_button_text_color"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_now_exchange"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now_exchange"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textBackgroundType="5"
                    app:textColorType="-1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:id="@+id/rl_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/iv_sign_in_reminder_bg"
                android:layout_width="116dp"
                android:layout_height="36dp"
                android:src="@drawable/bg_sign_in_reminder"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                app:colorFilterType="18"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:src="@drawable/bg_sign_in"
                android:scaleType="fitXY"
                app:colorFilterType="17"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_sign_in_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/continuous_sign_full_days_hint"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.martian.libmars.ui.theme.MiSwitchButton
                    android:textSize="10dp"
                    android:gravity="center_vertical"
                    android:id="@+id/switch_button"
                    android:background="@drawable/selectable_background_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/sign_notify"
                    android:drawablePadding="4dp"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:switchButtonBackgroundType="2"
                    app:switchButtonDrawableType="2"
                    app:switchButtonIconHeight="12dp"
                    app:switchButtonIconWidth="26dp"
                    app:switchButtonLocationForText="left"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sign"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:isScrollContainer="false"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sign_in_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/mission_items"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
