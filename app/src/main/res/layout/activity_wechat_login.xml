<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wechat_login_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp">
        <ImageView
            android:gravity="center_horizontal"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_launcher"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/wechat_login_slogon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/wechat_login_slogon"/>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border_button_round_default"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="24dp"
            android:onClick="onWechatLoginClick"
            app:backgroundType="-1"
            app:selectableLayout="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_login_wechat"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/login_wx"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="onIntimateClick">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/intimate_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/icon_checkin_unselected"
                android:layout_marginEnd="4dp"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/day_text_color_thirdly"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已阅读并"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/day_text_color_thirdly"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/after_login_privacy"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/day_text_color_thirdly"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/user_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_privacy"
                android:onClick="onUserAgreementClick"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/day_text_color_thirdly"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_symbol"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/day_text_color_thirdly"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和“"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/day_text_color_thirdly"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/privacy_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_link"
                android:onClick="onPrivacyClick"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/day_text_color_thirdly"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_symbol"
                app:textColorType="2"/>
        </LinearLayout>
    </LinearLayout>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:id="@+id/wechat_login_phone"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/icon_login_phone_circle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onPhoneLoginClick"
        app:colorFilterType="15"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/login_loading"
        android:background="#88222222"
        android:padding="12dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ProgressBar
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Small"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/loading_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务通信中..."
            android:singleLine="true"/>
    </LinearLayout>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:padding="5dp"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="11dp"
        android:src="@drawable/icon_phone_close"
        android:layout_alignParentRight="true"
        android:onClick="onCloseClick"
        android:layout_alignParentEnd="true"/>
    <com.martian.libmars.ui.theme.ThemeTextView
        android:textSize="12sp"
        android:id="@+id/bind_hint"
        android:paddingLeft="32dp"
        android:paddingRight="33dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="提示"
        android:layout_alignParentBottom="true"
        android:paddingStart="32dp"
        android:paddingEnd="33dp"
        app:textColorType="2"/>
</com.martian.libmars.ui.theme.ThemeRelativeLayout>
