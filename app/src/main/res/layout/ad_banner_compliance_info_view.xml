<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/tv_native_ad_privacy_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.martian.mibook.ui.reader.ReaderThemeTextView
        android:textSize="10dp"
        android:ellipsize="end"
        android:id="@+id/tv_native_ad_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:readerTextColorType="2"/>
    <com.martian.mibook.ui.reader.ReaderThemeTextView
        android:textSize="10dp"
        android:ellipsize="end"
        android:id="@+id/tv_native_ad_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/app_permission"
        android:singleLine="true"
        android:layout_marginStart="4dp"
        app:readerTextColorType="2"/>
    <com.martian.mibook.ui.reader.ReaderThemeTextView
        android:textSize="10dp"
        android:ellipsize="end"
        android:id="@+id/tv_native_ad_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/app_privacy"
        android:singleLine="true"
        android:layout_marginStart="4dp"
        app:readerTextColorType="2"/>
    <com.martian.mibook.ui.reader.ReaderThemeTextView
        android:textSize="10dp"
        android:ellipsize="end"
        android:id="@+id/tv_native_ad_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/app_function"
        android:singleLine="true"
        android:layout_marginStart="4dp"
        app:readerTextColorType="2"/>
</LinearLayout>
