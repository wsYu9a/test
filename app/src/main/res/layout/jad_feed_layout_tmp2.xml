<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/jad_feed_white"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="14dp"
        android:textColor="#000000"
        android:id="@+id/jad_feed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:text=""
        android:singleLine="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/jad_feed_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <TextView
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#979797"
            android:gravity="end|top"
            android:id="@+id/jad_feed_close"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="âœ•"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/jad_src"
            android:background="#88000000"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jad_ad_txt"
            android:layout_alignBottom="@+id/jad_feed_image"/>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:layout_width="32dp"
            android:layout_height="12dp"
            android:layout_margin="5dp"
            android:src="@drawable/jad_feed_logo_default"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
