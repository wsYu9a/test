<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/ksad_reward_task_dialog_bg"
        android:layout_width="@dimen/ksad_live_subscribe_dialog_width"
        android:layout_height="@dimen/ksad_live_origin_dialog_height"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp">
        <ImageView
            android:id="@+id/ksad_live_subscribe_dialog_btn_close"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:src="@drawable/ksad_reward_card_close"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="34dp">
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:id="@+id/ksad_live_subscribe_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"/>
            <com.kwad.components.core.widget.KSCornerImageView
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/ksad_live_subscribe_dialog_icon"
                android:layout_width="@dimen/ksad_live_subscribe_dialog_icon_size"
                android:layout_height="@dimen/ksad_live_subscribe_dialog_icon_size"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="10dp"
                app:ksad_radius="200dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_gravity="center"
                android:id="@+id/ksad_live_subscribe_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#ff666666"
                android:id="@+id/ksad_live_subscribe_dialog_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/ksad_reward_main_color"
                android:gravity="center_vertical"
                android:id="@+id/ksad_live_subscribe_dialog_vide_detail"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="9dp"
                android:text="查看详情"
                android:drawableRight="@drawable/ksad_ic_arrow_right_main_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="25dp">
            <com.kwad.components.core.widget.KsStyledTextButton
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/ksad_live_subscribe_dialog_btn_continue"
                android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
                android:layout_width="162dp"
                android:layout_height="46dp"
                android:layout_marginBottom="13dp"
                android:text="继续观看"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ff666666"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/ksad_live_subscribe_dialog_btn_deny"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="残忍拒绝"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
