<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:backgroundType="11">
        <RelativeLayout
            android:background="@drawable/bg_record_permission"
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/icon_dialog_close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_dialog_close"
                android:layout_alignParentRight="true"
                app:colorFilterType="2"
                app:enableFilter="false"
                app:selectableImageType="1"/>
            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="79dp"
                android:src="@drawable/ic_launcher"/>
            <ImageView
                android:id="@+id/switch_icon"
                android:layout_width="33dp"
                android:layout_height="20dp"
                android:layout_marginLeft="191dp"
                android:layout_marginTop="85dp"
                android:src="@drawable/selector_icon_unselected_day"/>
        </RelativeLayout>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:text="@string/open_record_permission"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="14dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:text="@string/open_record_permission_hint"
            android:lineSpacingExtra="3dp"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/open_record_permission"
            android:background="@drawable/border_button_round_default"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:text="去开启"
            app:selectableItem="true"
            app:textColorType="-1"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</LinearLayout>
