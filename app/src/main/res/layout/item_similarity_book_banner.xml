<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="93dp"
    android:layout_height="123dp">
    <com.martian.libmars.widget.BookCoverImageView
        android:id="@+id/book_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:bookCoverDrawable="@drawable/cover_loading_default_day"
        app:cornerRadiusBottomLeft="6dp"
        app:cornerRadiusBottomRight="12dp"
        app:cornerRadiusTopLeft="6dp"
        app:cornerRadiusTopRight="12dp"
        app:maskDrawable="@drawable/bg_book_shelf_cover_mask_default"/>
    <TextView
        android:textSize="12sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:id="@+id/tv_book_name"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lineSpacingMultiplier="1.1"/>
</RelativeLayout>
