<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnableOverScrollBounce="false"
    app:srlReboundDuration="600">
    <com.martian.libmars.ui.theme.ThemeRelativeLayout
        android:id="@+id/rl_book_container"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:relativeBackgroundType="2">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_book_mall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.martian.libmars.widget.recyclerview.LoadingTip
            android:id="@+id/rv_loadedTip"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </com.martian.libmars.ui.theme.ThemeRelativeLayout>
</com.scwang.smart.refresh.layout.SmartRefreshLayout>
