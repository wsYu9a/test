            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/mission_click_ads_desc"
            android:lineSpacingMultiplier="2"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</ScrollView>
