<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/scanning_book_tips_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <View
            android:background="@drawable/bg_float_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.25"/>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:orientation="horizontal"
            android:id="@+id/record_sync_float_view"
            android:background="@drawable/border_background_round_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="9dp"
            app:backgroundType="6">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/scanning_authorize_tips"
                android:layout_weight="1"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_go_authorize"
                android:background="@drawable/border_button_round_default"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingRight="6dp"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="@string/scanning_authorize_now"
                app:selectableItem="true"
                app:textColorType="-1"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/scanning_tips_close"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/icon_float_close"
                app:enableFilter="false"
                app:selectableImageType="1"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
    </RelativeLayout>
</LinearLayout>
