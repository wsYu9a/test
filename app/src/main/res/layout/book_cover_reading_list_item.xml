<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingStart="14dp"
        android:paddingEnd="20dp"
        app:backgroundType="5">
        <FrameLayout
            android:id="@+id/fl_book_shadow"
            android:background="@drawable/bg_book_cover_shadow"
            android:layout_width="81dp"
            android:layout_height="112dp">
            <com.martian.libmars.widget.BookCoverImageView
                android:id="@+id/book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                app:bookCoverDrawable="@drawable/cover_loading_default_day"
                app:cornerRadiusBottomLeft="4dp"
                app:cornerRadiusBottomRight="8dp"
                app:cornerRadiusTopLeft="4dp"
                app:cornerRadiusTopRight="8dp"
                app:maskDrawable="@drawable/bg_book_cover_mask"
                app:selectableCoverType="2"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="6dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:id="@+id/rd_book_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_orange_a400"
                    android:gravity="center_vertical"
                    android:id="@+id/rd_book_score"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12dp"
                android:ellipsize="end"
                android:id="@+id/rd_book_short_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lines="2"
                android:lineSpacingMultiplier="1.3"
                app:textColorType="2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="12dp"
                    android:id="@+id/rd_book_author_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    app:textColorType="2"/>
                <com.martian.libmars.ui.theme.ThemeLinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/ll_add_bookshelf"
                    android:background="?android:attr/windowBackground"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundType="3"
                    app:selectableLayout="true">
                    <com.martian.libmars.ui.theme.ThemeTextView
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/tv_add_shelf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_bookstore"
                        android:includeFontPadding="false"
                        app:textColorType="1"/>
                </com.martian.libmars.ui.theme.ThemeLinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
