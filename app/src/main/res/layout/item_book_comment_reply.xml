<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_comment_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_header"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_nickname"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="14sp"
            android:ellipsize="end"
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv_user_header"
            app:layout_constraintTop_toTopOf="parent"
            app:textColorType="2"/>
        <com.martian.mibook.mvvm.widget.ExpLevelLabel
            android:id="@+id/iv_exp_level"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toEndOf="@+id/tv_nickname"
            app:layout_constraintTop_toTopOf="@+id/tv_nickname"/>
        <ImageView
            android:id="@+id/iv_vip_tag"
            android:visibility="visible"
            android:layout_width="21dp"
            android:layout_height="14dp"
            android:src="@drawable/icon_vip_tag_opened"
            android:contentDescription="@string/app_name"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toEndOf="@+id/iv_exp_level"
            app:layout_constraintTop_toTopOf="@+id/tv_nickname"/>
        <TextView
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_tag"
            android:background="@drawable/border_button_round_default"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nickname"
            app:layout_constraintStart_toEndOf="@+id/iv_vip_tag"
            app:layout_constraintTop_toTopOf="@+id/tv_nickname"/>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_comment_reply_view"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:backgroundType="16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_nickname"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickname">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:id="@+id/tv_comment_reply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:textColorType="2"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <RelativeLayout
            android:id="@+id/rl_reader_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_nickname"
            app:layout_constraintTop_toBottomOf="@+id/ll_comment_reply_view">
            <com.martian.libmars.ui.theme.ThemeGradientExpandableTextView
                android:textSize="15sp"
                android:id="@+id/tv_reader_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:lineSpacingMultiplier="1.2"
                app:gradientWidth="36sp"
                app:handleWidth="32sp"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:id="@+id/tv_reader_comment_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expand"
                android:layout_alignBottom="@+id/tv_reader_comment"
                android:layout_alignEnd="@+id/tv_reader_comment"
                app:textColorType="2"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_time_reply_vote"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rl_reader_comment"
            app:layout_constraintTop_toBottomOf="@+id/rl_reader_comment">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:id="@+id/tv_reply_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reply"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_comment_time"
                app:layout_constraintTop_toTopOf="parent"
                app:textColorType="2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_vote_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/tv_reply_num"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_vote_up_count"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/vote_upcount"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_vote_up_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="20dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_more_reply"
            android:paddingTop="6dp"
            android:paddingBottom="7dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="6dp">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/iv_more_line"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                app:colorFilterType="4"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:id="@+id/tv_more_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/iv_more_reply"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_comment_expand_down"
                android:layout_marginStart="4dp"
                app:colorFilterType="4"
                app:selectableImageType="1"/>
            <ProgressBar
                android:id="@+id/pb_expand_loading"
                android:visibility="gone"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:indeterminateTint="?attr/textColorThirdly"
                style="?android:attr/progressBarStyleSmall"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_fold"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="7dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/ll_more_reply">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:id="@+id/tv_fold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fold"
                android:layout_marginStart="8dp"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/icon_comment_expand_up"
                android:layout_marginStart="4dp"
                app:colorFilterType="4"
                app:selectableImageType="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
