<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ksad_reward_origin_live_root"
    android:background="@drawable/ksad_reward_origrin_live_actionbar_bg"
    android:layout_width="match_parent"
    android:layout_height="88dp">
    <com.kwad.components.core.widget.KsLogoView
        android:id="@+id/ksad_reward_live_kwai_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/ksad_live_actionbar_btn"
        android:background="@drawable/ksad_reward_origrin_live_button_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginRight="12dp"
        android:text="进入直播间"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/ksad_live_actionbar_btn"
        android:layout_centerVertical="true">
        <com.kwad.components.ad.reward.widget.KsAuthorIconView
            android:id="@+id/ksad_live_author_icon"
            android:layout_width="@dimen/ksad_reward_author_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ksad_live_author_icon"
            android:layout_alignBottom="@+id/ksad_live_author_icon">
            <TextView
                android:textSize="16sp"
                android:textColor="#222222"
                android:gravity="center"
                android:id="@+id/kwad_actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:shadowColor="#4d000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#666666"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/kwad_actionbar_des_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
