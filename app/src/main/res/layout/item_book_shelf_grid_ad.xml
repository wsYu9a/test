<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ads_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_ad_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_ad_view"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="104dp"
                    android:layout_height="133dp">
                    <ImageView
                        android:id="@+id/iv_app_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:src="@drawable/cover_loading_default_day"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:src="@drawable/bg_book_cover_stroke"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/app_name"/>
                    <FrameLayout
                        android:id="@+id/iv_video_view"
                        android:background="@android:color/background_dark"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/br_close_ads_icon"
                        android:background="@drawable/border_book_mark_grey_grid"
                        android:paddingBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:textSize="9sp"
                            android:textColor="@color/white"
                            android:id="@+id/tv_ads_logo_desc"
                            android:paddingLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ads"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_close_white"
                            android:contentDescription="@string/app_name"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_ads_icon_small"
                        android:paddingLeft="2dp"
                        android:paddingTop="1dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:alpha="0.6"
                        android:layout_alignParentEnd="true">
                        <ImageView
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/iv_ads_logo"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/icon_ads_csj"
                            android:contentDescription="@string/app_name"/>
                    </LinearLayout>
                </RelativeLayout>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:textColor="?attr/textColorPrimary"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_app_desc"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:maxLines="2"
                    android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/grid_ads_shade"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </RelativeLayout>
</FrameLayout>
