<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/grid_item_root"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.martian.libmars.ui.theme.ThemeTextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:id="@+id/category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/category_hot_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.martian.mibook.ui.TagItemLayout
        android:id="@+id/hot_tags"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:tagItemMaxLines="2"
        app:tagItemTextSize="14sp"/>
    <com.martian.libmars.ui.theme.ThemeGridView
        android:id="@+id/category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
