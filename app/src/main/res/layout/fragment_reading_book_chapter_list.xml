<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_chapter_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingRight="20dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="12sp"
                android:id="@+id/dir_numbers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                app:readerTextColorType="2"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/dir_category_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectableItemLayout="true">
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:id="@+id/dir_category_icon_left"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/reader_icon_order_down"
                    app:readerImageColorFilterType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:id="@+id/dir_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sequence_negative"
                    android:singleLine="true"
                    android:layout_marginStart="2dp"
                    app:readerTextColorType="2"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.libmars.widget.scroller.FastScrollRecyclerView
                android:id="@+id/rv_chapter_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:overScrollMode="never"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_action"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:src="@drawable/icon_location_chapter"
                android:scaleType="center"
                android:layout_marginEnd="20dp"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="44dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:maxImageSize="24dp"
                app:pressedTranslationZ="0dp"
                app:rippleColor="@android:color/transparent"
                app:useCompatPadding="false"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <com.martian.mibook.mvvm.read.widget.ReaderLoadingTip
        android:id="@+id/loadedTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>
