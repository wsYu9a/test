<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="271dp"
        android:layout_height="260dp">
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="271dp"
            android:layout_height="213dp">
            <com.kwad.sdk.widget.KSFrameLayout
                android:background="@drawable/ksad_reward_task_dialog_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#222222"
                        android:layout_gravity="center"
                        android:id="@+id/ksad_reward_close_extend_dialog_play_time_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"/>
                    <com.kwad.components.core.widget.KsStyledTextButton
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/ksad_reward_close_extend_dialog_btn_continue"
                        android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
                        android:layout_width="207dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="12dp"
                        android:text="留下看看"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#ff9c9c9c"
                        android:gravity="center"
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/ksad_reward_close_extend_dialog_btn_deny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="残忍离开"/>
                </LinearLayout>
            </com.kwad.sdk.widget.KSFrameLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/ksad_reward_close_extend_dialog_gift"
            android:layout_width="127dp"
            android:layout_height="100dp"
            android:src="@drawable/ksad_reward_gift"/>
    </FrameLayout>
</FrameLayout>
