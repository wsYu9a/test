<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60sp"
    android:layout_height="wrap_content">
    <com.martian.libmars.widget.BookCoverImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:scaleType="centerCrop"
        app:bookCoverDrawable="@drawable/cover_loading_default_day"
        app:cornerRadiusBottomLeft="4dp"
        app:cornerRadiusBottomRight="8dp"
        app:cornerRadiusTopLeft="4dp"
        app:cornerRadiusTopRight="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maskDrawable="@drawable/bg_book_cover_mask"
        app:selectableCoverType="2"/>
    <TextView
        android:textSize="11sp"
        android:textColor="@color/white"
        android:id="@+id/tv_add_book_shelf"
        android:background="@drawable/border_book_mark_transparent"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_book_store"
        app:layout_constraintBottom_toBottomOf="@+id/iv_book_cover"
        app:layout_constraintEnd_toEndOf="@+id/iv_book_cover"/>
    <com.martian.libmars.ui.theme.ThemeTextView
        android:textSize="14sp"
        android:ellipsize="end"
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:minLines="2"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_book_cover"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/theme_default"
        android:id="@+id/tv_read_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>
