<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <ProgressBar
        android:id="@+id/ksad_preview_topbar_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:progress="30"
        android:progressDrawable="@drawable/ksad_reward_preview_topbar_progress"
        style="?android:attr/progressBarStyleHorizontal"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ksad_preview_topbar_reward_gift_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ksad_reward_preview_top_gift"/>
        <TextView
            android:textColor="#ff6b80"
            android:gravity="center"
            android:id="@+id/ksad_preview_topbar_reward_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="浏览页面"
            android:includeFontPadding="false"/>
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/ksad_preview_topbar_reward_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/ksad_preview_topbar_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/ksad_reward_preview_close"/>
</FrameLayout>
