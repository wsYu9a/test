<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/ly_empty_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/heavy_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backup_empty"/>
        </LinearLayout>
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"/>
        <ProgressBar
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/pb_loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <View
        android:background="?attr/backgroundSecondary"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/textColorSecondary"
            android:id="@+id/tv_backup_filepath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="?android:attr/windowBackground"
            android:paddingLeft="8dp"
            android:paddingTop="7dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_default"
                    android:gravity="center"
                    android:id="@+id/tv_delete_backup"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/delete_selected"
                    app:selectableItem="true"
                    app:textColorType="-1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/tv_create_backup"
                    android:background="@drawable/border_button_round_default"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/create_book_store_backup"
                    app:selectableItem="true"
                    app:textColorType="-1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_default"
                    android:gravity="center"
                    android:id="@+id/tv_restore_book_store"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/recover_selected_backup"
                    app:selectableItem="true"
                    app:textColorType="-1"/>
            </LinearLayout>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
    </LinearLayout>
</LinearLayout>
