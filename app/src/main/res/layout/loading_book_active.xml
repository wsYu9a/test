<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/tv_active_reading_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBackClick">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:layout_gravity="center_vertical"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_activity_back"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="14sp"
                android:ellipsize="end"
                android:id="@+id/tv_active_reading_book_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                app:readerTextColorType="2"/>
        </LinearLayout>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:id="@+id/tv_active_reading_title"
            android:paddingTop="12dp"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_main"
            android:maxLines="2"
            app:readerTextColorType="1"/>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="18sp"
            android:ellipsize="end"
            android:id="@+id/tv_active_reading_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_activity_main"
            android:maxLines="4"
            android:lineSpacingMultiplier="1.3"
            app:readerTextColorType="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1">
        <com.martian.mibook.ui.reader.ReaderThemeItemTextView
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tv_active_reading_purchase_video"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/active_by_video"
            app:isButton="1"/>
        <com.martian.mibook.ui.reader.ReaderThemeItemTextView
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tv_active_reading_vip"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:text="@string/vip_for_active"
            app:isButton="2"/>
    </LinearLayout>
</LinearLayout>
