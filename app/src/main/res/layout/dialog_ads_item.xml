<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bonus_ads_view"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/day_text_color_primary"
            android:id="@+id/bonus_ads_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
        <com.martian.libmars.widget.RoundedLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginTop="9dp"
            app:rlRoundBottomLeft="true"
            app:rlRoundBottomRight="true"
            app:rlRoundTopLeft="true"
            app:rlRoundTopRight="true"
            app:rlRoundedCornerRadius="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/bonus_ads_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_loading_default_horizontal"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/app_name"/>
                <FrameLayout
                    android:id="@+id/iv_ads_video"
                    android:background="@android:color/background_dark"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_ads_icon_large"
                    android:paddingLeft="2dp"
                    android:paddingTop="1dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ads_logo"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_ads_csj"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:textSize="7sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ads_logo_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ads"/>
                </LinearLayout>
            </RelativeLayout>
        </com.martian.libmars.widget.RoundedLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/bonus_ads_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="18dp">
            <ImageView
                android:id="@+id/bonus_ads_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="3dp"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/day_text_color_thirdly"
                android:id="@+id/bonus_ads_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:textSize="12sp"
                android:textColor="@color/theme_default"
                android:id="@+id/bonus_ads_button"
                android:background="@drawable/border_button_round_blue_line"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:paddingRight="4dp"
                android:paddingBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:minWidth="56dp"
                android:text="@string/view_detail"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
