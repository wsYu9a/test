<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.kwad.sdk.widget.KSFrameLayout
        android:layout_gravity="center"
        android:background="@drawable/ksad_reward_task_dialog_bg"
        android:layout_width="@dimen/ksad_reward_order_dialog_width"
        android:layout_height="@dimen/ksad_reward_order_dialog_height">
        <ImageView
            android:id="@+id/ksad_reward_order_dialog_btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:src="@drawable/ksad_reward_card_close"/>
        <LinearLayout
            android:layout_gravity="top|center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ksad_reward_order_dialog_icon_size"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="26dp">
            <com.kwad.components.core.widget.KSCornerImageView
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/ksad_reward_order_dialog_icon"
                android:layout_width="@dimen/ksad_reward_order_dialog_icon_size"
                android:layout_height="@dimen/ksad_reward_order_dialog_icon_size"
                android:layout_marginRight="8dp"
                app:ksad_radius="4dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/ksad_reward_order_dialog_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <com.kwad.components.core.widget.KsStyledTextButton
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/ksad_reward_order_dialog_btn_view_detail"
                android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
                android:layout_width="162dp"
                android:layout_height="46dp"
                android:layout_marginBottom="8dp"
                android:text="查看详情"/>
            <TextView
                android:textSize="15sp"
                android:textColor="#ff666666"
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/ksad_reward_order_dialog_btn_deny"
                android:background="@drawable/ksad_ksad_reward_follow_btn_follow_unchecked_bg"
                android:layout_width="162dp"
                android:layout_height="46dp"
                android:text="残忍拒绝"/>
        </LinearLayout>
    </com.kwad.sdk.widget.KSFrameLayout>
</FrameLayout>
