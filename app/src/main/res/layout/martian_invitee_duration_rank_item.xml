<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/invitee_view"
    android:background="?android:attr/windowBackground"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/rd_rank_idx"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rd_invitee_header"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_launcher"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">
            <TextView
                android:textSize="14sp"
                android:textColor="?attr/textColorPrimary"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/rd_invitee_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLength="6"/>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/textColorSecondary"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/rd_invitee_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?attr/textColorSecondary"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/rd_invitee_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/textColorSecondary"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_jin_gong"
                android:singleLine="true"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/coins_text_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rd_invitee_coins"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="?attr/textColorSecondary"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rd_invitee_unit"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bonus_unit"
                android:singleLine="true"/>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:id="@+id/rd_invitee_coins_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
