<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/jad_feed_white"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/jad_rl_ad_image"
        android:layout_width="146dp"
        android:layout_height="133dp">
        <ImageView
            android:id="@+id/jad_feed_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            layout="@layout/jad_ad1"/>
    </RelativeLayout>
    <TextView
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#979797"
        android:gravity="bottom|left"
        android:layout_gravity="bottom"
        android:id="@+id/jad_feed_close"
        android:paddingLeft="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="âœ•"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:textSize="15dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:gravity="top|left"
            android:id="@+id/jad_feed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="2"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#a5a5a5"
            android:id="@+id/jad_feed_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jad_ad_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
