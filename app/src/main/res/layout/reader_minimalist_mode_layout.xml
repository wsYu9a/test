<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.widget.RoundedLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:rlRoundBottomLeft="false"
    app:rlRoundBottomRight="false"
    app:rlRoundTopLeft="true"
    app:rlRoundTopRight="true"
    app:rlRoundedCornerRadius="16dp">
    <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/iv_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_more"
                android:layout_centerVertical="true"
                app:selectableImageType="1"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minimalist_mode_setting"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center"
                android:id="@+id/cl_show_bonus"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingRight="20dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:textColor="?attr/textColorPrimary"
                    android:id="@+id/tv_show_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_show_bonus"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@+id/cl_show_bonus_tips"
                    app:layout_constraintEnd_toStartOf="@+id/pref_show_bonus"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_show_bonus_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:minWidth="70dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pref_show_bonus"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_show_bonus">
                    <com.martian.mibook.ui.reader.ReaderThemeProgressBar
                        android:id="@+id/duration_progressbar"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:max="300"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="?android:attr/progressBarStyleHorizontal"/>
                    <com.martian.mibook.ui.reader.ReaderRoundColorView
                        android:id="@+id/duration_coins_inner"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:alpha="0.2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.martian.mibook.ui.reader.ReaderThemeImageView
                        android:id="@+id/duration_coins"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_reading_coins"
                        app:layout_constraintBottom_toBottomOf="@+id/duration_coins_inner"
                        app:layout_constraintEnd_toEndOf="@+id/duration_coins_inner"
                        app:layout_constraintStart_toStartOf="@+id/duration_coins_inner"
                        app:layout_constraintTop_toTopOf="@+id/duration_coins_inner"
                        app:readerImageColorFilterType="6"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="10dp"
                        android:id="@+id/duration_bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bonus_opened"
                        android:layout_marginStart="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/duration_coins"
                        app:layout_constraintTop_toTopOf="parent"
                        app:readerTextColorType="2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.martian.mibook.ui.reader.ReaderThemeSwitchButton
                    android:gravity="center_vertical"
                    android:id="@+id/pref_show_bonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                app:colorFilterType="7"
                app:enableFilter="true"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center"
                android:id="@+id/cl_show_menu"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingRight="20dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:textColor="?attr/textColorPrimary"
                    android:id="@+id/tv_show_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_menu"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@+id/layout_show_menu_tips"
                    app:layout_constraintEnd_toStartOf="@+id/pref_show_menu"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/layout_show_menu_tips"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toStartOf="@+id/pref_show_menu"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_show_menu"
                    app:readerBackgroundType="16">
                    <com.martian.mibook.ui.reader.ReaderThemeImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/reader_icon_space_normal"
                        app:readerImageColorFilterType="2"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/menu"
                        android:layout_marginStart="2dp"
                        app:readerTextColorType="2"/>
                </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:id="@+id/tv_show_menu_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_show_menu_tips"
                    app:readerTextColorType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeSwitchButton
                    android:gravity="center_vertical"
                    android:id="@+id/pref_show_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                app:colorFilterType="7"
                app:enableFilter="true"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center"
                android:id="@+id/cl_show_progress_time_power"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingRight="20dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:textColor="?attr/textColorPrimary"
                    android:id="@+id/tv_show_progress_time_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_progress_time_power"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@+id/layout_show_progress_time_power_tips"
                    app:layout_constraintEnd_toStartOf="@+id/pref_show_progress_time_power"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/layout_show_progress_time_power_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pref_show_progress_time_power"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_show_progress_time_power">
                    <RelativeLayout
                        android:id="@+id/battery_view"
                        android:layout_width="19dp"
                        android:layout_height="9dp">
                        <com.martian.mibook.ui.reader.ReaderThemeImageView
                            android:id="@+id/rbs_iv_battery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/reader_battery_bg"
                            android:contentDescription="@string/cd_battery"
                            app:readerImageColorFilterType="2"/>
                        <com.martian.mibook.ui.reader.ReaderThemeProgressBar
                            android:id="@+id/rbs_tv_battery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="1.5dp"
                            android:layout_marginBottom="1.5dp"
                            android:max="100"
                            android:progress="60"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="3dp"
                            app:type="sweep"
                            style="?android:attr/progressBarStyleHorizontal"/>
                        <com.martian.mibook.ui.reader.ReaderThemeImageView
                            android:id="@+id/riv_charging"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/reader_charging_icon"
                            app:readerImageColorFilterType="6"/>
                    </RelativeLayout>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="12sp"
                        android:id="@+id/rbs_tv_time"
                        android:paddingBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:08"
                        android:layout_marginStart="6dp"
                        app:readerTextColorType="2"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="12sp"
                        android:id="@+id/rbs_tv_right_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23%"
                        android:layout_marginStart="16dp"
                        app:readerTextColorType="2"/>
                </LinearLayout>
                <com.martian.mibook.ui.reader.ReaderThemeSwitchButton
                    android:gravity="center_vertical"
                    android:id="@+id/pref_show_progress_time_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                app:colorFilterType="7"
                app:enableFilter="true"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center"
                android:id="@+id/cl_show_bottom_text_tips"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingRight="20dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:textColor="?attr/textColorPrimary"
                    android:id="@+id/tv_show_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_bottom_text_tips"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@+id/tv_show_bottom_text_tips"
                    app:layout_constraintEnd_toStartOf="@+id/pref_show_bottom_text_tips"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:id="@+id/tv_show_bottom_text_tips"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pref_show_bottom_text_tips"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_show_bottom_text"
                    app:readerTextColorType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeSwitchButton
                    android:gravity="center_vertical"
                    android:id="@+id/pref_show_bottom_text_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
</com.martian.libmars.widget.RoundedLayout>
