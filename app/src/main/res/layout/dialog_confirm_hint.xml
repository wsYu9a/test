<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/dialog_view_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/dialog_view"/>
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="vertical"
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_centerVertical="true"
        app:backgroundType="6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:layout_centerInParent="true"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/dialog_close_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/icon_rules_close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:colorFilterType="4"
                app:enableFilter="true"
                app:selectableImageType="1"/>
        </RelativeLayout>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="16dp"
            android:gravity="left"
            android:id="@+id/dialog_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:lineSpacingMultiplier="1.3"
            app:textColorType="1"/>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="16dp"
                android:gravity="center"
                android:id="@+id/dialog_close"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_weight="1"
                app:selectableItem="true"
                app:textColorType="1"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/dialog_textColor"
                android:gravity="center"
                android:id="@+id/dialog_notarize"
                android:background="@drawable/border_button_right_default"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_weight="1"
                app:selectableItem="true"
                app:textColorType="-1"/>
        </LinearLayout>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
    <View
        android:id="@+id/dialog_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/dialog_view"/>
    <View
        android:id="@+id/dialog_shade_view"
        android:background="@drawable/border_account_grey_line_night"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_above="@+id/dialog_view_bottom"
        android:layout_below="@+id/dialog_view_top"
        android:alpha="0.5"/>
</RelativeLayout>
