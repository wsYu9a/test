<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/ksad_shake_center_root"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/ksad_shake_center_circle_area"
        android:layout_width="@dimen/ksad_reward_shake_center_icon_size"
        android:layout_height="@dimen/ksad_reward_shake_center_icon_size">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ksad_shake_center_circle_area_bg"
            android:background="@drawable/ksad_shake_center_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/ksad_shake_center_icon"
                android:layout_width="@dimen/ksad_reward_shake_center_hand_size"
                android:layout_height="@dimen/ksad_reward_shake_center_hand_size"
                android:src="@drawable/ksad_ic_shake_hand"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:id="@+id/ksad_shake_center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ksad_shake_center_sub_title"
        android:paddingTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
