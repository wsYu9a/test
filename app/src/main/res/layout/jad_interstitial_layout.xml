<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jad_native_insert_ad_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/jad_interstitial_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:textSize="7dp"
            android:textStyle="bold"
            android:textColor="#f9f9f9"
            android:gravity="center"
            android:layout_gravity="end|top"
            android:background="@drawable/jad_interstitial_close_view"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="5dp"
            android:text="âœ•"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/jad_inserstitial_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_below="@+id/jad_interstitial_close"/>
    <ImageView
        android:gravity="center"
        android:layout_width="32dp"
        android:layout_height="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/jad_interstitial_logo_default"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
