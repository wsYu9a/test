<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:backgroundType="15"
    app:selectableLayout="true">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/category_hot_view"
        android:background="@drawable/bg_category_hot_male"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1">
            <TextView
                android:textSize="16sp"
                android:id="@+id/tv_page_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/tv_page_desc_view"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_category_hot"
                    android:contentDescription="@string/app_name"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_page_desc"
                    android:paddingBottom="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:maxLines="1"
                    android:maxEms="8"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/tv_page_cover"
            android:layout_width="27dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
