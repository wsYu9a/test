<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/block_ad_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
        android:orientation="vertical"
        android:id="@+id/block_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:readerBackgroundType="15">
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/block_ad_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_more"
                app:readerImageSelectableImageType="1"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/block_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_block_ad_time"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp">
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/left"/>
            <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:readerBackgroundType="17">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:id="@+id/block_ad_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"/>
            </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"/>
            <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:readerBackgroundType="17">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:id="@+id/block_ad_seconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"/>
            </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <com.martian.mibook.ui.reader.ReaderThemeItemTextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/block_ad_vip"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/vip_for_one_yuan"
                android:layout_weight="1"
                app:isButton="1"/>
            <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                android:id="@+id/block_ad_video_view"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                app:readerBackgroundType="16"
                app:selectableItemLayout="true">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/block_ad_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/video_ad_fifteen_minutes"/>
            </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
        </LinearLayout>
    </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
</RelativeLayout>
