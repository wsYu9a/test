<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.sigmob.sdk.base.views.CircleImageView
        android:id="@+id/sig_app_icon"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:radius="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/sig_adInfo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/sig_app_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/sig_ad_title"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="Title"
            android:singleLine="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#666666"
            android:id="@+id/sig_ad_desc"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="Subtitle"
            android:singleLine="true"/>
        <com.sigmob.sdk.newInterstitial.SigAdPrivacyInfoView
            android:id="@+id/sig_ad_privacy_info"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
    </LinearLayout>
</RelativeLayout>
