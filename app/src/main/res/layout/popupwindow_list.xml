<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/popupwindow_view_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/popupwindow_view"/>
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="vertical"
        android:id="@+id/popupwindow_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/popupwindow_title"
            android:paddingTop="13dp"
            android:paddingBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/popupwindow_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
    <View
        android:id="@+id/popupwindow_shade_view"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupwindow_view_top"
        android:alpha="0.5"/>
</RelativeLayout>
