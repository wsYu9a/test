<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ksad_reward_order_end_card_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.kwad.sdk.widget.KSFrameLayout
        android:layout_gravity="center"
        android:id="@+id/ksad_reward_order_end_card"
        android:background="@drawable/ksad_reward_task_dialog_bg"
        android:layout_width="@dimen/ksad_reward_order_end_dialog_width"
        android:layout_height="@dimen/ksad_reward_order_end_dialog_height"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/ksad_reward_order_end_btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:src="@drawable/ksad_reward_card_close"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="18dp">
            <LinearLayout
                android:layout_gravity="top|center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ksad_reward_order_dialog_icon_size">
                <com.kwad.components.core.widget.KSCornerImageView
                    android:layout_gravity="top|center_horizontal"
                    android:id="@+id/ksad_reward_order_end_icon"
                    android:layout_width="@dimen/ksad_reward_order_dialog_icon_size"
                    android:layout_height="@dimen/ksad_reward_order_dialog_icon_size"
                    android:layout_marginRight="8dp"
                    app:ksad_radius="4dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/ksad_reward_order_end_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_alignParentTop="true"
                        android:lineSpacingMultiplier="0.8"/>
                    <com.kwad.components.ad.widget.KsPriceView
                        android:textSize="8sp"
                        android:textColor="@color/ksad_reward_main_color"
                        android:id="@+id/ksad_reward_order_end_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:textColor="#ff666666"
                android:ellipsize="end"
                android:id="@+id/ksad_reward_order_end_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"/>
        </LinearLayout>
        <com.kwad.components.core.widget.KsStyledTextButton
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/ksad_reward_order_end_btn_buy"
            android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
            android:layout_width="162dp"
            android:layout_height="46dp"
            android:layout_marginBottom="30dp"
            android:text="立即抢购"/>
    </com.kwad.sdk.widget.KSFrameLayout>
</RelativeLayout>
