<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/vlion_cn_ad_white_dialog_6dp_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/vlion_custom_black_font_color"
            android:id="@+id/vlion_ad_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"/>
        <TextView
            android:textSize="11sp"
            android:textColor="@color/vlion_custom_tran_80_black_font_color"
            android:id="@+id/vlion_ad_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <TextView
            android:textSize="11sp"
            android:textColor="@color/vlion_custom_tran_80_black_font_color"
            android:id="@+id/vlion_ad_app_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <cn.vlion.ad.inland.ad.view.text.VlionDownloadBottomTextView
            android:id="@+id/vlion_ad_app_detal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:vlion_style_text_color="@color/vlion_custom_tran_60_black_font_color"
            app:vlion_style_text_size="vlion_size10sp"/>
        <cn.vlion.ad.inland.ad.view.active.VlionDownloadProgressBar
            android:gravity="bottom"
            android:id="@+id/vlion_ad_app_action"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            app:vlion_show_type="vlion_progressbar"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/vlion_ad_app_icon"
        android:layout_width="58dp"
        android:layout_height="58dp"/>
</FrameLayout>
