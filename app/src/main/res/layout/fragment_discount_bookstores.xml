<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/sv_container"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/bs_channels"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.martian.libmars.ui.theme.ThemeIRecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/original_irc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:loadMoreEnabled="true"
            app:refreshEnabled="false"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</androidx.core.widget.NestedScrollView>
