<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/dialog_view_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/dialog_view"/>
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/dialog_view"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="33dp"
        app:backgroundType="6">
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/dialog_coin_explain_hint"/>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="16sp"
                    android:id="@+id/dialog_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/dialog_coin_explain_desc1"
                    android:lineSpacingMultiplier="1.3"
                    app:textColorType="1"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/dialog_coin_explain_desc2"
                    android:lineSpacingMultiplier="1.3"
                    app:textColorType="2"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/dialog_coin_explain_desc3"
                    app:textColorType="1"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/dialog_coin_explain_desc4"
                    android:lineSpacingMultiplier="1.3"
                    app:textColorType="2"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/dialog_coin_explain_desc5"
                    app:textColorType="1"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/dialog_coin_explain_desc6"
                    android:lineSpacingMultiplier="1.3"
                    app:textColorType="2"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
        </ScrollView>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            app:colorFilterType="8"
            app:enableFilter="true"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dialog_textColor"
            android:gravity="center"
            android:id="@+id/dialog_notarize"
            android:background="@drawable/border_button_round_default"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:text="@string/known"
            app:selectableItem="true"
            app:textColorType="-1"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
    <View
        android:id="@+id/dialog_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/dialog_view"/>
    <View
        android:id="@+id/dialog_shade_view"
        android:background="@drawable/border_account_grey_line_night"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="33dp"
        android:layout_above="@+id/dialog_view_bottom"
        android:layout_below="@+id/dialog_view_top"
        android:alpha="0.5"/>
</RelativeLayout>
