<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:textColor="?attr/textColorPrimary"
                android:id="@+id/tv_coins_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="购买了20章节"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="?attr/textColorThirdly"
                android:ellipsize="middle"
                android:id="@+id/tv_coins_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="00:00"
                android:singleLine="true"
                app:textColorType="2"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/textColorPrimary"
            android:id="@+id/tv_coins_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书币"/>
    </LinearLayout>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:colorFilterType="7"
        app:enableFilter="true"/>
</LinearLayout>
