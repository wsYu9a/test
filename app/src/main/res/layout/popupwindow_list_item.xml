<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.martian.libmars.ui.theme.ThemeImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:colorFilterType="7"
        app:enableFilter="true"/>
    <com.martian.libmars.ui.theme.ThemeTextView
        android:textSize="16sp"
        android:textColor="?attr/textColorPrimary"
        android:id="@+id/popupwindow_item_title"
        android:paddingLeft="16dp"
        android:paddingTop="15dp"
        android:paddingRight="16dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/book_top"
        app:selectableItem="true"/>
</LinearLayout>
