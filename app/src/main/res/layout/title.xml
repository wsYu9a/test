<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/content_title_view"
        android:paddingLeft="16dp"
        android:paddingTop="24dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/bonus_gold_text"
            android:id="@+id/discount_type"
            android:background="@drawable/text_mark_gold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/limit_free"/>
        <com.martian.mibook.ui.IntervalCountdownTextView
            android:textSize="14sp"
            android:textColor="@color/bonus_red"
            android:gravity="right"
            android:id="@+id/discount_time"
            android:paddingRight="6dp"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:orientation="horizontal"
            android:id="@+id/content_more"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundType="7"
            app:selectableLayout="true">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/load_more_books"
                android:layout_weight="1"
                app:textColorType="2"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_gravity="center"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/loan_more_black"
                app:colorFilterType="4"
                app:enableFilter="true"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
