<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.widget.RoundedLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rlRoundBottomLeft="false"
    app:rlRoundBottomRight="false"
    app:rlRoundTopLeft="true"
    app:rlRoundTopRight="true"
    app:rlRoundedCornerRadius="16dp">
    <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
        android:orientation="vertical"
        android:id="@+id/post_comment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:readerBackgroundType="19">
        <RelativeLayout
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/post_comment_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_post_comment_close"
                android:layout_centerVertical="true"
                app:readerImageSelectableImageType="1"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/post_comment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_comment"
                android:layout_centerInParent="true"/>
            <com.martian.mibook.ui.reader.ReaderThemeItemTextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/post_comment_button"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post"
                android:layout_centerVertical="true"
                android:alpha="0.4"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_alignParentEnd="true"
                app:isButton="1"
                app:selectableItem="true"/>
        </RelativeLayout>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/post_comment_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/bd_vote_1"
                android:paddingLeft="2dp"
                android:paddingTop="6dp"
                android:paddingRight="2dp"
                android:paddingBottom="6dp"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/bd_vote_2"
                android:paddingLeft="2dp"
                android:paddingTop="6dp"
                android:paddingRight="2dp"
                android:paddingBottom="6dp"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/bd_vote_3"
                android:paddingLeft="2dp"
                android:paddingTop="6dp"
                android:paddingRight="2dp"
                android:paddingBottom="6dp"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/bd_vote_4"
                android:paddingLeft="2dp"
                android:paddingTop="6dp"
                android:paddingRight="2dp"
                android:paddingBottom="6dp"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/bd_vote_5"
                android:paddingLeft="2dp"
                android:paddingTop="6dp"
                android:paddingRight="2dp"
                android:paddingBottom="6dp"
                android:layout_width="28dp"
                android:layout_height="36dp"
                android:src="@drawable/vote_star_grey"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:id="@+id/post_comment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wonderful"
            app:readerTextColorType="3"/>
        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
            android:id="@+id/bd_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            app:readerBackgroundType="22"
            app:selectableLayout="false">
            <com.martian.mibook.ui.reader.ReaderThemeEditText
                android:textSize="16sp"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorThirdly"
                android:gravity="top"
                android:id="@+id/bd_edit_comment"
                android:background="@null"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/my_comment_hint"
                android:maxLines="8"
                android:minLines="4"
                android:singleLine="false"
                android:maxLength="300"
                android:lineSpacingMultiplier="1.2"/>
        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
    </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
</com.martian.libmars.widget.RoundedLayout>
