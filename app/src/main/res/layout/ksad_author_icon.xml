<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="70dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="top|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/ksad_top_flag_layout"
        android:paddingTop="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="64dp"
        android:layout_height="wrap_content">
        <com.kwad.components.core.widget.KsStyledLinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ksad_top_layout"
            android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
            android:layout_width="58dp"
            android:layout_height="25dp">
            <ImageView
                android:id="@+id/ksad_fans_hot_icon"
                android:visibility="gone"
                android:layout_width="9dp"
                android:layout_height="10dp"
                android:src="@drawable/ksad_ic_fire"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/ksad_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </com.kwad.components.core.widget.KsStyledLinearLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/ksad_author_arrow_down"
            android:background="@drawable/ksad_reward_follow_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="3dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/ksad_author_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <com.kwad.components.core.widget.KSCornerImageView
            android:layout_gravity="center"
            android:id="@+id/ksad_author_animator"
            android:layout_width="@dimen/ksad_reward_author_icon_anim_start"
            android:layout_height="@dimen/ksad_reward_author_icon_anim_start"
            android:src="@drawable/ksad_author_icon_bg"/>
        <com.kwad.components.core.widget.KSCornerImageView
            android:layout_gravity="center"
            android:id="@+id/ksad_author_animator2"
            android:layout_width="@dimen/ksad_reward_author_icon_anim_start"
            android:layout_height="@dimen/ksad_reward_author_icon_anim_start"
            android:src="@drawable/ksad_author_icon_bg"/>
        <com.kwad.sdk.widget.KSFrameLayout
            android:layout_gravity="center"
            android:id="@+id/ksad_author_icon_frame"
            android:padding="1dp"
            android:layout_width="@dimen/ksad_reward_author_icon_inner_width"
            android:layout_height="@dimen/ksad_reward_author_icon_inner_width"
            app:ksad_radius="200dp">
            <com.kwad.components.core.widget.KSCornerImageView
                android:layout_gravity="center"
                android:id="@+id/ksad_author_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:ksad_radius="200dp"/>
        </com.kwad.sdk.widget.KSFrameLayout>
        <com.kwad.components.core.widget.KSCornerImageView
            android:layout_gravity="center"
            android:id="@+id/ksad_author_icon_outer"
            android:background="@drawable/ksad_author_icon_bg"
            android:layout_width="@dimen/ksad_reward_author_icon_inner_width"
            android:layout_height="@dimen/ksad_reward_author_icon_inner_width"/>
        <com.kwad.components.core.widget.KsStyledImageView
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/ksad_author_btn_follow"
            android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ksad_reward_follow_add"/>
    </FrameLayout>
    <com.kwad.components.core.widget.KsStyledLinearLayout
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/ksad_origin_live_bottom_layout"
        android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
        android:visibility="visible"
        android:layout_width="46dp"
        android:layout_height="16dp"
        android:layout_marginTop="-19dp">
        <TextView
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/ksad_origin_live_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播中"
            android:maxLines="1"/>
    </com.kwad.components.core.widget.KsStyledLinearLayout>
</LinearLayout>
