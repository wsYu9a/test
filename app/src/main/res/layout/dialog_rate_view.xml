<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/dialog_view_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/dialog_view"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dialog_view"
        android:background="@drawable/border_account_grey_line_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/success"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                app:colorFilterType="6"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/dialog_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/icon_rules_close"
                android:layout_alignParentRight="true"
                app:enableFilter="false"
                app:selectableImageType="1"/>
        </RelativeLayout>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/day_text_color_primary"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/withdraw_congratulation"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/day_text_color_secondary"
            android:id="@+id/rate_desc"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/five_star"
            android:lineSpacingMultiplier="1.3"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dialog_textColor"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_notarize"
            android:background="@drawable/border_button_round_default"
            android:paddingLeft="68dp"
            android:paddingTop="10dp"
            android:paddingRight="68dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/give_rate"
            app:selectableItem="true"
            app:textColorType="-1"/>
    </LinearLayout>
    <View
        android:id="@+id/dialog_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/dialog_view"/>
    <View
        android:id="@+id/dialog_shade_view"
        android:background="@drawable/border_account_grey_line_night"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_above="@+id/dialog_view_bottom"
        android:layout_below="@+id/dialog_view_top"
        android:alpha="0.5"/>
</RelativeLayout>
