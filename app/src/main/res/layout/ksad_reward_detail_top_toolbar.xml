<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <TextView
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/ksad_video_count_down"
        android:background="@drawable/ksad_video_btn_bg"
        android:visibility="visible"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ksad_detail_reward_deep_task_view"
            android:background="@drawable/ksad_reward_deep_task_view_bg"
            android:layout_width="wrap_content"
            android:layout_height="28dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:background="@drawable/ksad_reward_deep_task_icon_bg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ksad_video_reward_deep_task_icon"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/ksad_reward_deep_task_count_down"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="1dp"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/ksad_reward_deep_task_sound_switch"
            android:background="@drawable/ksad_video_btn_bg"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ksad_video_sound_selector"
            android:scaleType="centerInside"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ksad_video_sound_switch"
        android:background="@drawable/ksad_video_btn_bg"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/ksad_video_sound_selector"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/ksad_detail_reward_icon"
        android:visibility="gone"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/ksad_video_reward_icon"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/ksad_detail_call_btn"
            android:background="@drawable/ksad_reward_call_bg"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="1dp"
            android:drawableRight="@drawable/ksad_arrow_left"
            android:drawablePadding="4dp"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/ksad_top_toolbar_close_tip"
            android:background="@drawable/ksad_reward_call_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="28dp"/>
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/ksad_detail_close_btn"
            android:visibility="gone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ksad_page_close"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</RelativeLayout>
