<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.martian.libmars.ui.theme.ThemeIRecyclerView
        android:id="@+id/category_irc"
        android:background="?android:attr/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loadMoreEnabled="true"
        app:refreshEnabled="false"/>
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/book_order_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:id="@+id/book_order"
            android:paddingTop="4dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_latest"
            android:drawableRight="@drawable/icon_more_content_expand"
            android:drawablePadding="4dp"
            app:textColorType="2"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</RelativeLayout>
