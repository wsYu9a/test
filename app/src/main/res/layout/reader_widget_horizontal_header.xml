<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_centerInParent="true">
    <com.martian.mibook.ui.reader.ReaderThemeTextView
        android:textSize="11sp"
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="1"
        android:ems="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:readerTextColorType="6"/>
    <com.martian.mibook.ui.reader.ReaderBrokenLineView
        android:id="@+id/broken_line"
        android:layout_width="10dp"
        android:layout_height="44dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_tips"
        app:layout_constraintTop_toTopOf="parent"
        app:readerBrokenLineDirection="left"
        app:readerBrokenLineMaxDragDistance="4dp"
        app:readerBrokenLineWidth="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
