<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/br_header_setting_view"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="horizontal"
        android:id="@+id/br_header_setting"
        android:background="?android:attr/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/br_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/br_my_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/all_books"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/br_my_class_dot"
                android:visibility="gone"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/red_circle"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_gravity="center_vertical"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_more"/>
        </LinearLayout>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
