<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/grid_item_view"
        android:paddingLeft="6dp"
        android:paddingTop="8dp"
        android:paddingRight="6dp"
        android:paddingBottom="16dp"
        android:layout_width="85dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/grid_view_cover"
            android:layout_width="match_parent"
            android:layout_height="98dp">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/author_book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cover_default"
                android:scaleType="centerCrop"
                app:enableFilter="false"
                app:selectableImageType="2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_book_cover_stroke"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/author_book_sign"
                android:background="@drawable/border_book_mark_red_grid"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="@string/bookstores_free"/>
        </RelativeLayout>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/author_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="2"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.2"
            app:readerTextColorType="1"/>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="12sp"
            android:ellipsize="end"
            android:id="@+id/author_book_category"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            app:readerTextColorType="2"/>
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/theme_default"
            android:ellipsize="end"
            android:id="@+id/author_book_score"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
