<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_marks"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ll_empty"
            android:paddingBottom="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_book_mark"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/click_add_book_mark"
                app:readerTextColorType="2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="184dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/icon_book_mark_tip"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
