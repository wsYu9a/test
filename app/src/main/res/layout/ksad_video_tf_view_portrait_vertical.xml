<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ksad_video_thumb_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"/>
    <FrameLayout
        android:id="@+id/ksad_video_tail_frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.kwad.components.ad.widget.tailframe.appbar.TailFrameBarAppPortraitVertical
            android:id="@+id/ksad_video_app_tail_frame"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="286dp"/>
        <com.kwad.components.ad.reward.widget.tailframe.TailFrameBarH5View
            android:id="@+id/ksad_video_h5_tail_frame"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="188dp"/>
    </FrameLayout>
    <com.kwad.components.core.widget.KsLogoView
        android:id="@+id/ksad_video_tf_logo"
        android:background="@drawable/ksad_splash_logo_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/ksad_video_tail_frame_container"/>
</RelativeLayout>
