<?xml version="1.0" encoding="utf-8"?>
<com.martian.mibook.ui.reader.ReaderThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/sl_book_cover_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <ImageView
            android:id="@+id/sl_book_cover"
            android:background="@drawable/bg_book_cover_shape"
            android:padding="4dp"
            android:layout_width="46dp"
            android:layout_height="58dp"
            android:src="@drawable/cover_loading_default_day"
            android:onClick="onBookInfoClick"
            android:contentDescription="@string/app_name"/>
        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:onClick="onBookInfoClick"
            app:selectableItemLayout="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="16sp"
                    android:textColor="?attr/textColorPrimary"
                    android:id="@+id/sl_book_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:id="@+id/sl_book_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    app:readerTextColorType="2"/>
            </LinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:paddingTop="2dp"
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/icon_account_more"/>
        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
    </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
    <com.martian.libmars.utils.tablayout.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:maxHeight="?attr/actionBarSize"
        app:textColorType="1"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:id="@+id/sl_cache_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        app:colorFilterType="7"
        app:enableFilter="true"/>
    <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
        android:gravity="center"
        android:id="@+id/sl_cache_view"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCacheClick"
        app:selectableItemLayout="true">
        <com.martian.mibook.ui.reader.ReaderThemeImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/reader_icon_download"
            app:readerImageColorFilterType="3"/>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/free_download"
            app:readerTextColorType="3"/>
    </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
</com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
