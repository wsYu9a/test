<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="14sp"
                    android:textColor="?attr/textColorPrimary"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/rd_withdraw_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现类型"
                    android:singleLine="true"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="12sp"
                    android:textColor="?attr/textColorThirdly"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/rd_withdraw_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="00:00:00"
                    android:singleLine="true"
                    app:textColorType="2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/bonus_red"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:id="@+id/rd_withdraw_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.00"
                    android:singleLine="true"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="12sp"
                    android:textColor="?attr/textColorThirdly"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/rd_withdraw_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="00:00:00"
                    android:singleLine="true"
                    app:textColorType="2"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/theme_default"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/rd_withdraw_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="提现状态"
            android:singleLine="true"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:colorFilterType="7"
        app:enableFilter="true"/>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
