<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/vlion_cn_ad_white_radius_7dp_bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/vilon_tv_left_time_des"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:minWidth="200dp"/>
    <TextView
        android:textSize="13sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/vilon_tv_continue"
        android:background="@drawable/vlion_cn_ad_button_blue_radius_23dp_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text="继续观看"/>
    <TextView
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+id/vilon_tv_exit"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text="坚持退出"/>
</LinearLayout>
