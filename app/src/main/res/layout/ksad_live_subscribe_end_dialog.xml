<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ksad_live_subscribe_end_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_width="@dimen/ksad_live_subscribe_end_dialog_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <com.kwad.sdk.widget.KSFrameLayout
            android:layout_gravity="top"
            android:background="@drawable/ksad_reward_task_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ksad_live_subscribe_end_dialog_height"
            android:layout_marginTop="23dp">
            <ImageView
                android:id="@+id/ksad_live_subscribe_end_btn_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:src="@drawable/ksad_reward_card_close"/>
            <com.kwad.components.core.widget.KsStyledTextButton
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@+id/ksad_live_subscribe_end_btn_subscribe"
                android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="25dp"
                android:text="立即预约"/>
        </com.kwad.sdk.widget.KSFrameLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <com.kwad.sdk.widget.KSFrameLayout
                android:layout_gravity="top|center_horizontal"
                android:background="#ffffff"
                android:padding="3dp"
                android:layout_width="@dimen/ksad_live_subscribe_end_dialog_icon_size"
                android:layout_height="@dimen/ksad_live_subscribe_end_dialog_icon_size"
                app:ksad_radius="500dp">
                <com.kwad.components.core.widget.KSCornerImageView
                    android:id="@+id/ksad_live_subscribe_end_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:ksad_radius="500dp"/>
            </com.kwad.sdk.widget.KSFrameLayout>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:id="@+id/ksad_live_subscribe_end_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:maxLines="1"
                android:drawableLeft="@drawable/ksad_ic_clock"
                android:drawablePadding="6dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ff666666"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ksad_live_subscribe_end_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ff666666"
                android:ellipsize="end"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ksad_live_subscribe_end_subscribe_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
