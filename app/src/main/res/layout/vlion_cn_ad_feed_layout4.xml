<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/vlion_ll_info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:layout_marginEnd="8dp">
            <TextView
                android:textSize="16sp"
                android:textColor="#ff000000"
                android:id="@+id/vlion_tv_title_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_marginEnd="7dp"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <cn.vlion.ad.inland.ad.view.active.VlionDownloadProgressBar
                    android:id="@+id/vlion_tv_action"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:vlion_show_type="vlion_progressbarBlue18dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ff717171"
                    android:gravity="end|center_vertical"
                    android:id="@+id/vlion_tv_appName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"/>
                <ImageView
                    android:id="@+id/vlion_img_showappicon"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/vlion_img_showimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <include
                android:layout_gravity="start|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="7dp"
                layout="@layout/vlion_cn_ad_icon"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <cn.vlion.ad.inland.ad.view.text.VlionDownloadBottomTextView
            android:gravity="start"
            android:id="@+id/vlionBottomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            app:vlion_style_text_color="@color/vlion_custom_tran_60_black_font_color"
            app:vlion_style_text_size="vlion_size8sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/vlion_img_close"
            android:background="@drawable/vlion_cn_ad_close_black"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="14dp"/>
    </LinearLayout>
</LinearLayout>
