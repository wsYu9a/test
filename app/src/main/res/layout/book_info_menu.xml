<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingRight="13dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_popup_window"
        android:paddingLeft="3dp"
        android:paddingTop="2dp"
        android:paddingRight="3dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundType="6">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.martian.libmars.ui.theme.ThemeLinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/menu_report"
                    android:paddingLeft="20dp"
                    android:paddingTop="14dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundType="5">
                    <com.martian.libmars.ui.theme.ThemeImageView
                        android:id="@+id/menu_icon_book_import"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/menu_icon_report"/>
                    <com.martian.libmars.ui.theme.ThemeTextView
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="@string/book_report"/>
                </com.martian.libmars.ui.theme.ThemeLinearLayout>
            </LinearLayout>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
    </LinearLayout>
</LinearLayout>
