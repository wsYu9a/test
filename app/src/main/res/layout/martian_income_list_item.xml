<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:textColor="?attr/textColorPrimary"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/martian_income_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入类型"
                android:singleLine="true"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="?attr/textColorThirdly"
                android:id="@+id/martian_income_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="00:00:00"
                android:singleLine="true"
                app:textColorType="2"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/day_text_color_primary"
                android:gravity="end"
                android:layout_gravity="end"
                android:id="@+id/martian_income_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0分钟"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:colorFilterType="7"
        app:enableFilter="true"/>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
