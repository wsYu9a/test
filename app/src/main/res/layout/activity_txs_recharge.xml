<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:background="?android:attr/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txs_coins_amount"/>
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_default"
                    android:id="@+id/txs_coins_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:includeFontPadding="false"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/txs_coin"/>
                <com.martian.libmars.ui.theme.ThemeLinearLayout
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:onClick="onCoinsDetailClick"
                    app:backgroundType="8"
                    app:selectableLayout="true">
                    <com.martian.libmars.ui.theme.ThemeTextView
                        android:textSize="12sp"
                        android:textColor="?attr/textColorSecondary"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/recharge_recode"
                        app:textColorType="2"/>
                    <com.martian.libmars.ui.theme.ThemeImageView
                        android:layout_gravity="center"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/loan_more_black"
                        app:colorFilterType="4"
                        app:enableFilter="true"/>
                </com.martian.libmars.ui.theme.ThemeLinearLayout>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                app:colorFilterType="7"
                app:enableFilter="true"/>
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txs_recharge_amount"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/txs_recharge_amount_hint"
                    app:textColorType="2"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.mibook.ui.MyGridView
                android:id="@+id/txs_recharge_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                app:colorFilterType="7"
                app:enableFilter="true"/>
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="11dp"
                android:paddingRight="16dp"
                android:paddingBottom="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onRechargeTypeClick">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txs_recharge_method"
                    android:layout_weight="1"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/txs_recharge_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/txs_recharge_weixin"
                    app:textColorType="2"/>
                <com.martian.libmars.ui.theme.ThemeImageView
                    android:layout_gravity="center"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/loan_more_black"
                    app:colorFilterType="4"
                    app:enableFilter="true"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                app:colorFilterType="7"
                app:enableFilter="true"/>
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/pay_money"/>
                <com.martian.libmars.ui.theme.ThemeTextView
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:id="@+id/txs_recharge_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    app:textColorType="4"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/border_button_round_default"
                android:paddingTop="9dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/pay_now"
                android:onClick="onPaymentClick"
                app:selectableItem="true"
                app:textColorType="-1"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txs_recharge_hint"
                app:textBackgroundType="1"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/heavy_grey"
                android:id="@+id/txs_recharge_rule"
                android:background="?android:attr/windowBackground"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txs_recharge_hint_weixin"
                app:textBackgroundType="1"
                app:textColorType="-1"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/heavy_grey"
                android:paddingLeft="20dp"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txs_recharge_hint_weixin_2"
                app:textBackgroundType="1"
                app:textColorType="-1"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="12sp"
                android:textColor="@color/heavy_grey"
                android:paddingLeft="20dp"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txs_recharge_hint_weixin_3"
                app:textBackgroundType="1"
                app:textColorType="-1"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
    </ScrollView>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
