<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ksad_exit_intercept_dialog_layout"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/ksad_exit_intercept_content_layout"
        android:background="@drawable/ksad_web_exit_intercept_dialog_bg"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <TextView
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ksad_exit_intercept_content"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:text="真的不再看看了吗？"
            android:includeFontPadding="false"/>
        <View
            android:background="#eaeaea"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:textSize="17dp"
                android:textColor="#666666"
                android:gravity="center"
                android:id="@+id/ksad_web_exit_intercept_negative_btn"
                android:background="@drawable/ksad_web_exit_intercept_negative_btn_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="残忍离开"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <View
                android:background="#eaeaea"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="17dp"
                android:textColor="#ff0063"
                android:gravity="center"
                android:id="@+id/ksad_web_exit_intercept_positive_btn"
                android:background="@drawable/ksad_web_exit_intercept_positive_btn_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="留下看看"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
