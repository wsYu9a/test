<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/withdraw_money"
        android:background="@drawable/border_background_withdraw_day"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="104dp"
        app:backgroundType="-1"
        app:selectableLayout="true">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/theme_default"
            android:id="@+id/withdraw_money_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/day_text_color_thirdly"
            android:id="@+id/withdraw_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/withdraw_thirty"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</LinearLayout>
