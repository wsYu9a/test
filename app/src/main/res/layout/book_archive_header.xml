<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.ui.theme.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/archive_setting"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <com.martian.libmars.ui.theme.ThemeTextView
        android:textSize="16sp"
        android:textColor="?attr/textColorPrimary"
        android:ellipsize="end"
        android:id="@+id/br_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_books"
        android:singleLine="true"/>
    <com.martian.libmars.ui.theme.ThemeImageView
        android:id="@+id/br_tag_more"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/icon_more"/>
</com.martian.libmars.ui.theme.ThemeLinearLayout>
