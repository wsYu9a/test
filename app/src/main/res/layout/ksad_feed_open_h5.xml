<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="24dp">
    <TextView
        android:textSize="11dp"
        android:textColor="#9c9c9c"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/ksad_h5_desc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_weight="1"/>
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="24dp">
        <TextView
            android:textSize="11dp"
            android:textColor="@color/ksad_reward_main_color"
            android:gravity="center"
            android:id="@+id/ksad_h5_open_btn"
            android:background="@drawable/ksad_feed_app_download_before_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/ksad_h5_open_cover"
            android:background="@drawable/ksad_video_actionbar_cover_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
