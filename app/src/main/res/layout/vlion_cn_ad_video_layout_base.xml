<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/vlion_ad_center_video"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/vlion_ad_video_retry"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/vlion_cn_ad_retry"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:textSize="32px"
            android:textColor="@color/vlion_custom_white_font_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vlion_custom_ad_text_video_load_error"/>
        <TextView
            android:textSize="32px"
            android:textColor="@color/vlion_custom_white_font_color"
            android:gravity="center"
            android:id="@+id/vlion_ad_video_button_retry"
            android:background="@color/vlion_custom_red_button_color"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/vlion_custom_ad_text_retry"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/vlion_cn_video_play_icon"
        android:background="@drawable/vlion_player_play"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/vlion_progressBar_circle"
        android:background="#00000000"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminateTint="#ffffffff"
        style="@style/Vlion.ProgressBar"/>
</FrameLayout>
