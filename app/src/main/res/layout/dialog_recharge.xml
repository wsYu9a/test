<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/dialog_view_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/dialog_view"/>
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="vertical"
        android:id="@+id/dialog_view"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="33dp"
        android:layout_centerVertical="true"
        app:backgroundType="6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_payment_method"
                android:layout_centerInParent="true"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/dialog_close"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/icon_rules_close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:colorFilterType="4"
                app:enableFilter="true"
                app:selectableImageType="1"/>
        </RelativeLayout>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="32dp"
            android:scaleType="fitXY"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:orientation="vertical"
            android:id="@+id/dialog_check_view"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/dialog_wx_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_wx"
                    android:contentDescription="@string/app_name"/>
                <CheckBox
                    android:textSize="16sp"
                    android:textColor="?attr/textColorPrimary"
                    android:gravity="center_vertical"
                    android:id="@+id/dialog_wx_check"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:button="@null"
                    android:text="@string/txs_recharge_weixin"
                    android:drawableRight="@drawable/checkbox_checked_state"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/dialog_zfb_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_zfb"
                    android:contentDescription="@string/app_name"/>
                <CheckBox
                    android:textSize="16sp"
                    android:textColor="?attr/textColorPrimary"
                    android:gravity="center_vertical"
                    android:id="@+id/dialog_zfb_check"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:button="@null"
                    android:text="@string/txs_recharge_alihb"
                    android:drawableRight="@drawable/checkbox_checked_state"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/dialog_notarize"
            android:background="@drawable/border_button_round_default"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="24dp"
            android:text="@string/cd_confirm"
            app:selectableItem="true"
            app:textColorType="-1"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
    <View
        android:id="@+id/dialog_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/dialog_view"/>
    <View
        android:id="@+id/duration_conversion_view"
        android:background="@drawable/border_account_grey_line_night"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="33dp"
        android:layout_above="@+id/dialog_view_bottom"
        android:layout_below="@+id/dialog_view_top"
        android:alpha="0.5"/>
</RelativeLayout>
