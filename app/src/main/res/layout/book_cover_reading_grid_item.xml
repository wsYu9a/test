<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/grid_item_view"
        android:background="?android:attr/windowBackground"
        android:paddingLeft="6dp"
        android:paddingTop="16dp"
        android:paddingRight="6dp"
        android:paddingBottom="16dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/grid_view_cover"
            android:layout_width="match_parent"
            android:layout_height="104dp">
            <com.martian.libmars.ui.theme.ThemeImageView
                android:id="@+id/book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cover_default"
                android:scaleType="centerCrop"
                app:enableFilter="false"
                app:selectableImageType="2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_book_cover_stroke"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/rd_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.2"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="12sp"
            android:ellipsize="end"
            android:id="@+id/rd_book_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            app:textColorType="2"/>
        <TextView
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/theme_default"
            android:ellipsize="end"
            android:id="@+id/rd_book_score"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"/>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
</RelativeLayout>
