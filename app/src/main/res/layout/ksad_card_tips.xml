<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_gravity="bottom|left"
    android:orientation="horizontal"
    android:id="@+id/ksad_card_tips_root"
    android:background="@drawable/ksad_tips_card_bg"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/ksad_live_card_tips_height"
    android:layout_marginLeft="@dimen/ksad_live_card_tips_margin_left"
    android:layout_marginBottom="@dimen/ksad_live_card_tips_margin_bottom">
    <TextView
        android:textSize="8sp"
        android:textColor="@android:color/white"
        android:background="@drawable/ksad_main_color_card_bg"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:text="@string/ksad_card_tips_pre"
        android:maxLines="1"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/ksad_card_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:maxWidth="97dp"
        android:maxLines="1"/>
    <ImageView
        android:background="#66ffffff"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ksad_card_tips_interested"
        android:maxLines="1"/>
</LinearLayout>
