<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_book_mark"
            android:layout_marginEnd="4dp"/>
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="14sp"
            android:textColor="@color/bookmark_tag_color"
            android:layout_gravity="bottom"
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:readerTextColorType="-1"/>
        <ImageView
            android:id="@+id/iv_book_mark"
            android:background="@drawable/ic_book_mark"
            android:layout_width="12dp"
            android:layout_height="60dp"
            android:layout_marginEnd="6dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
