<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/hot_comment_header"
        android:layout_width="26dp"
        android:layout_height="26dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp">
        <com.martian.mibook.ui.reader.ReaderThemeTextView
            android:textSize="14sp"
            android:ellipsize="end"
            android:id="@+id/hot_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.15"
            app:readerTextColorType="6"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/hot_comment_star_1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/vote_star_grey"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/hot_comment_star_2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/vote_star_grey"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/hot_comment_star_3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/vote_star_grey"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/hot_comment_star_4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/vote_star_grey"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/hot_comment_star_5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/vote_star_grey"
                app:readerImageColorFilterType="2"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="12sp"
                android:ellipsize="end"
                android:id="@+id/hot_comment_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读"
                android:singleLine="true"
                android:layout_marginStart="4dp"
                app:readerTextColorType="2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
