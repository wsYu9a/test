<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/dialog_view_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/dialog_view"/>
    <com.martian.libmars.ui.theme.ThemeLinearLayout
        android:orientation="vertical"
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="33dp"
        android:layout_centerVertical="true"
        app:backgroundType="6">
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_create_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="新建分组"/>
        <com.martian.libmars.ui.theme.ThemeTextView
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_create_desc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:lineSpacingMultiplier="1.2"/>
        <com.martian.libmars.ui.theme.ThemeLinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/search_view"
            android:background="@drawable/border_search_background_day"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="34dp"
            app:backgroundType="3">
            <EditText
                android:textSize="16dp"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorThirdly"
                android:layout_gravity="center_vertical"
                android:id="@+id/dialog_edit"
                android:background="@null"
                android:paddingLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="请输入自定义名称"
                android:layout_weight="1"
                android:inputType="none"
                android:imeOptions="actionDone"/>
            <com.martian.libmars.ui.theme.ThemeImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/dialog_search_close"
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_search_close"
                app:colorFilterType="4"
                app:selectableImageType="1"/>
        </com.martian.libmars.ui.theme.ThemeLinearLayout>
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            app:colorFilterType="7"
            app:enableFilter="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="16dp"
                android:gravity="center"
                android:id="@+id/dialog_close"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_weight="1"
                app:selectableItem="true"
                app:textColorType="1"/>
            <com.martian.libmars.ui.theme.ThemeTextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/dialog_textColor"
                android:gravity="center"
                android:id="@+id/dialog_notarize"
                android:background="@drawable/border_button_right_default"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_weight="1"
                app:selectableItem="true"
                app:textColorType="-1"/>
        </LinearLayout>
    </com.martian.libmars.ui.theme.ThemeLinearLayout>
    <View
        android:id="@+id/dialog_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/dialog_view"/>
    <View
        android:id="@+id/dialog_shade_view"
        android:background="@drawable/border_account_grey_line_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="33dp"
        android:layout_above="@+id/dialog_view_bottom"
        android:layout_below="@+id/dialog_view_top"
        android:alpha="0.5"/>
</RelativeLayout>
