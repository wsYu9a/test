<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="@drawable/ksad_install_tips_bg"
    android:paddingLeft="@dimen/ksad_install_tips_card_padding_left"
    android:paddingRight="@dimen/ksad_install_tips_card_padding_right"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ksad_install_tips_card_height">
    <ImageView
        android:id="@+id/ksad_install_tips_close"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:src="@drawable/ksad_install_tips_ic_close"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/ksad_install_tips_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ksad_logo_gray"
        android:layout_toRightOf="@+id/ksad_install_tips_close"
        android:layout_centerVertical="true"/>
    <Button
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/ksad_install_tips_install"
        android:background="@drawable/ksad_install_tips_btn_install_bg"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:text="安装"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#222222"
        android:gravity="center_vertical"
        android:id="@+id/ksad_install_tips_content"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/ksad_install_tips_install"
        android:layout_toRightOf="@+id/ksad_install_tips_icon"
        android:layout_centerVertical="true"/>
</RelativeLayout>
