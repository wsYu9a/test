<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.martian.libmars.widget.RoundedLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:rlRoundBottomLeft="true"
        app:rlRoundBottomRight="true"
        app:rlRoundTopLeft="true"
        app:rlRoundTopRight="true"
        app:rlRoundedCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:readerBackgroundType="13"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@drawable/bg_book_ad_top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <View
                    android:background="@drawable/bg_book_ad_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:src="@drawable/bg_reading_book_ad_head"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="10sp"
                    android:textColor="#ff2423"
                    android:id="@+id/book_ad_rank"
                    android:background="@drawable/bg_book_ad_rank"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="1dp"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="94dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="21dp"
                    app:readerTextColorType="-1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="58dp"
                        android:layout_height="80dp">
                        <com.martian.libmars.ui.theme.ThemeView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            app:viewBackgroundType="4"/>
                        <ImageView
                            android:id="@+id/book_ad_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/cover_loading_default_day"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/app_name"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/bg_book_cover_stroke"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/app_name"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.martian.mibook.ui.reader.ReaderThemeTextView
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/day_text_color_primary"
                                android:id="@+id/book_ad_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:readerTextColorType="4"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/book_ad_score_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <com.martian.mibook.ui.reader.ReaderThemeTextView
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/material_orange_400"
                                    android:id="@+id/book_ad_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:readerTextColorType="-1"/>
                                <com.martian.mibook.ui.reader.ReaderThemeTextView
                                    android:textSize="12sp"
                                    android:textColor="@color/material_orange_400"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/score_short"
                                    app:readerTextColorType="-1"/>
                            </LinearLayout>
                        </LinearLayout>
                        <com.martian.mibook.ui.reader.ReaderThemeTextView
                            android:textSize="12sp"
                            android:textColor="@color/day_text_color_thirdly"
                            android:id="@+id/book_ad_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            app:readerTextColorType="5"/>
                        <com.martian.mibook.ui.reader.ReaderThemeTextView
                            android:textSize="12sp"
                            android:textColor="@color/day_text_color_thirdly"
                            android:id="@+id/book_ad_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            app:readerTextColorType="5"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/material_orange_400"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recommend_reason"
                        app:readerTextColorType="-1"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="14sp"
                        android:textColor="@color/theme_default"
                        android:id="@+id/book_ad_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        app:readerTextColorType="-1"/>
                </LinearLayout>
                <View
                    android:background="@drawable/bg_divider_line_top"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="12dp"/>
                <com.martian.mibook.ui.AutoScrollView
                    android:id="@+id/book_ad_content_view"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:fadingEdgeLength="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:requiresFadingEdge="vertical">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="15sp"
                        android:textColor="@color/day_text_color_primary"
                        android:ellipsize="end"
                        android:id="@+id/book_ad_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        app:readerTextColorType="4"/>
                </com.martian.mibook.ui.AutoScrollView>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/book_ad_add_bookrack"
                    android:background="@drawable/reader_theme_default_background_selected"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/add_to_book_store"
                    app:readerTextColorType="-1"/>
            </LinearLayout>
        </RelativeLayout>
    </com.martian.libmars.widget.RoundedLayout>
    <com.martian.mibook.ui.FlowAdView
        android:id="@+id/mis_click_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="64dp"/>
</LinearLayout>
