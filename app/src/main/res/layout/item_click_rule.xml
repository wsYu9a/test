<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.martian.libmars.widget.RoundedLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/round_layout"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        app:rlRoundBottomLeft="true"
        app:rlRoundBottomRight="true"
        app:rlRoundTopLeft="true"
        app:rlRoundTopRight="true"
        app:rlRoundedCornerRadius="8dp"
        app:rlRoundingBorderWidth="1dp">
        <ImageView
            android:id="@+id/iv_rule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.martian.libmars.widget.RoundedLayout>
</LinearLayout>
