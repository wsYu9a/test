<?xml version="1.0" encoding="utf-8"?>
<com.martian.libmars.widget.smartrefresh.SmartRefreshHorizontal xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="40dp"
    app:srlEnableRefresh="false">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.martian.mibook.ui.reader.ReaderThemeImageView
                android:id="@+id/reading_end_bg"
                android:clickable="false"
                android:layout_width="248dp"
                android:layout_height="180dp"
                android:src="@drawable/bg_read_end_completion"
                android:alpha="0.07"
                app:readerImageColorFilterType="2"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/last_page_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp">
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:id="@+id/reading_end_close"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="56dp"
                    android:layout_height="44dp"
                    android:src="@drawable/icon_activity_back"
                    android:scaleType="center"
                    android:contentDescription="@string/cd_back"
                    android:paddingStart="15dp"
                    android:paddingEnd="17dp"
                    app:readerImageSelectableImageType="1"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginHorizontal="20dp">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.martian.mibook.ui.reader.ReaderThemeTextView
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:id="@+id/reading_end_title"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to_be_continue"/>
                        <com.martian.mibook.ui.reader.ReaderThemeTextView
                            android:textSize="14sp"
                            android:id="@+id/reading_end_desc"
                            android:visibility="gone"
                            android:clickable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:readerTextColorType="2"/>
                    </LinearLayout>
                    <com.martian.mibook.ui.reader.ReaderThemeSwitchButton
                        android:textSize="12sp"
                        android:textColor="?attr/textColorPrimary"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/switch_button_update_notify"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/update_notify"
                        android:drawablePadding="8dp"/>
                </LinearLayout>
                <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                    android:orientation="vertical"
                    android:id="@+id/book_comment_view"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginHorizontal="12dp"
                    app:readerBackgroundType="23"
                    app:selectableItemLayout="true">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <com.martian.mibook.ui.reader.ReaderThemeTextView
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:id="@+id/book_vote_score_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/empty_grade"/>
                                <com.martian.mibook.ui.reader.ReaderThemeTextView
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:id="@+id/book_vote_score_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                            <com.martian.mibook.ui.reader.ReaderThemeTextView
                                android:textSize="14sp"
                                android:id="@+id/book_vote_score_hint"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/score_short"
                                android:layout_marginStart="2dp"/>
                        </LinearLayout>
                        <com.martian.mibook.ui.reader.ReaderThemeImageView
                            android:id="@+id/iv_my_comment_vote_1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/icon_post_comment_star"
                            android:contentDescription="@string/app_name"
                            android:layout_marginEnd="2dp"
                            app:readerImageColorFilterType="3"
                            app:readerImageSelectableImageType="1"/>
                        <com.martian.mibook.ui.reader.ReaderThemeImageView
                            android:id="@+id/iv_my_comment_vote_2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/icon_post_comment_star"
                            android:contentDescription="@string/app_name"
                            android:layout_marginEnd="2dp"
                            app:readerImageColorFilterType="3"
                            app:readerImageSelectableImageType="1"/>
                        <com.martian.mibook.ui.reader.ReaderThemeImageView
                            android:id="@+id/iv_my_comment_vote_3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/icon_post_comment_star"
                            android:contentDescription="@string/app_name"
                            android:layout_marginEnd="2dp"
                            app:readerImageColorFilterType="3"
                            app:readerImageSelectableImageType="1"/>
                        <com.martian.mibook.ui.reader.ReaderThemeImageView
                            android:id="@+id/iv_my_comment_vote_4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/icon_post_comment_star"
                            android:contentDescription="@string/app_name"
                            android:layout_marginEnd="2dp"
                            app:readerImageColorFilterType="3"
                            app:readerImageSelectableImageType="1"/>
                        <com.martian.mibook.ui.reader.ReaderThemeImageView
                            android:id="@+id/iv_my_comment_vote_5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/icon_post_comment_star"
                            android:contentDescription="@string/app_name"
                            app:readerImageColorFilterType="3"
                            app:readerImageSelectableImageType="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">
                        <com.martian.mibook.ui.reader.ReaderThemeTextView
                            android:textSize="12sp"
                            android:id="@+id/book_comment_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/comment_guide"
                            android:layout_weight="1"
                            app:readerTextColorType="2"/>
                        <com.martian.mibook.ui.reader.ReaderThemeTextView
                            android:textSize="12sp"
                            android:id="@+id/book_comment_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/touch_to_comment"
                            app:readerTextColorType="2"/>
                    </LinearLayout>
                </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
                <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/reading_end_function_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginHorizontal="12dp"
                    app:readerBackgroundType="23">
                    <RelativeLayout
                        android:id="@+id/rl_end_go_book_mall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:id="@+id/end_go_book_mall_view"
                            android:paddingLeft="13dp"
                            android:paddingTop="8dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingHorizontal="13dp"
                            android:paddingVertical="8dp"
                            app:readerBackgroundType="9"
                            app:selectableItemLayout="true">
                            <com.martian.mibook.ui.reader.ReaderThemeImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/main_tab_bookstore_day_normal"/>
                            <com.martian.mibook.ui.reader.ReaderThemeTextView
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/go_bookmall"/>
                        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_end_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:id="@+id/end_comment_view"
                            android:paddingLeft="13dp"
                            android:paddingTop="8dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingHorizontal="13dp"
                            android:paddingVertical="8dp"
                            app:readerBackgroundType="9"
                            app:selectableItemLayout="true">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <com.martian.mibook.ui.reader.ReaderThemeImageView
                                    android:id="@+id/reading_end_comment_icon"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/icon_account_my_comment"
                                    android:layout_centerHorizontal="true"/>
                                <com.martian.mibook.ui.reader.ReaderThemeTextView
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:id="@+id/reading_end_comment_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-3dp"
                                    android:layout_marginStart="-8dp"
                                    android:layout_toEndOf="@+id/reading_end_comment_icon"/>
                            </RelativeLayout>
                            <com.martian.mibook.ui.reader.ReaderThemeTextView
                                android:textSize="10sp"
                                android:id="@+id/reading_end_comment_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/reader_comment_empty_desc"/>
                        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_end_go_book_shelf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:id="@+id/end_go_book_shelf_view"
                            android:paddingLeft="13dp"
                            android:paddingTop="8dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingHorizontal="13dp"
                            android:paddingVertical="8dp"
                            app:readerBackgroundType="9"
                            app:selectableItemLayout="true">
                            <com.martian.mibook.ui.reader.ReaderThemeImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/main_tab_bookrack_day_normal"/>
                            <com.martian.mibook.ui.reader.ReaderThemeTextView
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/go_bookrack"/>
                        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_bookworm_recommend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:id="@+id/bookworm_recommend_view"
                            android:paddingLeft="13dp"
                            android:paddingTop="8dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingHorizontal="13dp"
                            android:paddingVertical="8dp"
                            app:readerBackgroundType="9"
                            app:selectableItemLayout="true">
                            <com.martian.mibook.ui.reader.ReaderThemeImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/icon_bookworm"/>
                            <com.martian.mibook.ui.reader.ReaderThemeTextView
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/recommend_book_friends"/>
                        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
                    </RelativeLayout>
                </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
            android:orientation="vertical"
            android:id="@+id/recommend_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            app:readerBackgroundType="23"
            app:selectableItemLayout="true">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="16dp"
                android:paddingRight="12dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/same_like_books"
                    android:layout_weight="1"
                    app:readerTextColorType="1"/>
                <RelativeLayout
                    android:id="@+id/rl_switch_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="12sp"
                        android:id="@+id/tv_switch_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_more"
                        android:layout_centerVertical="true"/>
                    <ProgressBar
                        android:id="@+id/tv_switch_more_progressbar"
                        android:visibility="visible"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="2dp"
                        android:layout_toEndOf="@+id/tv_switch_more"
                        android:indeterminateTint="?attr/textColorThirdly"
                        style="?android:attr/progressBarStyleSmall"/>
                    <com.martian.mibook.ui.reader.ReaderThemeImageView
                        android:id="@+id/tv_switch_more_loan"
                        android:visibility="gone"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_bookmall_refresh"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/more_source"
                        android:layout_marginStart="2dp"
                        android:layout_toEndOf="@+id/tv_switch_more"/>
                </RelativeLayout>
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollview"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_grid_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:nestedScrollingEnabled="false"/>
            </androidx.core.widget.NestedScrollView>
        </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
    </LinearLayout>
    <com.martian.mibook.mvvm.read.widget.ReaderHorizontalFooter
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.martian.libmars.widget.smartrefresh.SmartRefreshHorizontal>
