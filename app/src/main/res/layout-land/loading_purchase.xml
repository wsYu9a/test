<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/tv_buy_reading_title_view"
                android:paddingTop="29dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onBackClick"
                android:paddingStart="24dp"
                android:paddingEnd="112dp">
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_activity_back"
                    app:readerImageColorFilterType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:id="@+id/tv_buy_reading_book_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    app:readerTextColorType="2"/>
            </LinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="24sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:id="@+id/tv_buy_reading_title"
                android:paddingTop="24dp"
                android:paddingBottom="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_main"
                android:maxLines="2"
                app:readerTextColorType="1"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="18sp"
                android:ellipsize="end"
                android:id="@+id/tv_buy_reading_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/title_activity_main"
                android:maxLines="2"
                android:lineSpacingMultiplier="1.3"
                app:readerTextColorType="1"/>
        </LinearLayout>
        <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:readerBackgroundType="25"/>
    </RelativeLayout>
    <com.martian.mibook.ui.reader.ReaderThemeRelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:rBackgroundType="1">
        <com.martian.libmars.ui.theme.ThemeImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:scaleType="fitXY"
            app:colorFilterType="8"
            app:enableFilter="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ll_unlock_view"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="16sp"
                android:id="@+id/tv_buy_reading_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchase_guide"
                app:readerTextColorType="1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/price_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chapter_price"
                    app:readerTextColorType="1"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:id="@+id/tv_buy_reading_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:readerTextColorType="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/account_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_book_coins"
                    app:readerTextColorType="1"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:textColor="@color/bonus_red"
                    android:id="@+id/tv_buy_account_book_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:readerTextColorType="3"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/tv_buy_auto_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:id="@+id/tv_buy_auto"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/btn_check_off_default"
                    app:readerImageColorFilterType="3"/>
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_buy_next_chapter"
                    android:layout_marginStart="4dp"
                    app:readerTextColorType="2"/>
            </LinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeItemTextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tv_buy_reading_purchase"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/confirm_buy"
                app:isButton="1"/>
            <com.martian.mibook.ui.reader.ReaderThemeItemTextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tv_buy_reading_purchase_video"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/purchase_by_video"
                app:isButton="2"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/tv_buy_with_ad"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0.6">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/free_read_with_ad"
                    app:readerTextColorType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/loan_more"
                    android:layout_marginStart="2dp"
                    app:readerImageColorFilterType="2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ll_vip_view"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchase_guide_2"
                app:readerTextColorType="1"/>
            <com.martian.mibook.ui.reader.ReaderThemeTextView
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_buy_vip_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"/>
            <com.martian.libmars.ui.theme.ThemeLinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ll_buy_vip"
                android:background="@drawable/shape_vip_button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:backgroundType="-1"
                app:selectableLayout="true">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/vip_text_color_primary"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy_vip_unlock_text"/>
            </com.martian.libmars.ui.theme.ThemeLinearLayout>
            <com.martian.mibook.ui.reader.ReaderThemeItemTextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tv_buy_vip_purchase_video"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/purchase_by_video"
                app:isButton="2"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/tv_free_read_with_ad"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0.6">
                <com.martian.mibook.ui.reader.ReaderThemeTextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/free_read_with_ad"
                    app:readerTextColorType="2"/>
                <com.martian.mibook.ui.reader.ReaderThemeImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/loan_more"
                    android:layout_marginStart="2dp"
                    app:readerImageColorFilterType="2"/>
            </LinearLayout>
        </LinearLayout>
    </com.martian.mibook.ui.reader.ReaderThemeRelativeLayout>
</LinearLayout>
