<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reading_ads_flow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.martian.libmars.widget.RoundedLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rlRoundBottomLeft="true"
        app:rlRoundBottomRight="true"
        app:rlRoundTopLeft="true"
        app:rlRoundTopRight="true"
        app:rlRoundedCornerRadius="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_ads_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_loading_default_horizontal"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/app_name"/>
                <FrameLayout
                    android:id="@+id/iv_ads_video"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/border_book_mark_grey_list"
                    android:paddingLeft="2dp"
                    android:paddingTop="1dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.3"
                    android:layout_marginStart="8dp">
                    <ImageView
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ads_logo"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_ads_csj"
                        android:contentDescription="@string/app_name"/>
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="8dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ads_logo_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="@string/ads"
                        android:layout_marginStart="2dp"
                        app:readerTextColorType="-1"/>
                </LinearLayout>
                <ViewStub
                    android:id="@+id/ad_compliance_info_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <com.martian.libmars.widget.RoundedLayout
                android:id="@+id/tv_ads_text_view"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:rlRoundBottomLeft="true"
                app:rlRoundBottomRight="true"
                app:rlRoundTopLeft="false"
                app:rlRoundTopRight="false"
                app:rlRoundedCornerRadius="8dp">
                <com.martian.mibook.ui.reader.ReaderThemeLinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="3dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.martian.mibook.ui.reader.ReaderThemeTextView
                        android:textSize="16sp"
                        android:textColor="?attr/textColorSecondary"
                        android:ellipsize="end"
                        android:id="@+id/tv_ads_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        app:textColorType="1"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <com.martian.mibook.ui.reader.ReaderThemeTextView
                            android:textSize="12sp"
                            android:textColor="?attr/textColorPrimary"
                            android:ellipsize="end"
                            android:id="@+id/tv_ads_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_weight="1"
                            app:textColorType="2"/>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/btn_native_creative_view"
                            android:background="@drawable/border_button_ad"
                            android:paddingLeft="8dp"
                            android:paddingRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_marginLeft="4dp">
                            <com.martian.mibook.ui.reader.ReaderThemeButton
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/btn_native_creative"
                                android:background="@null"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/view_detail"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.martian.mibook.ui.reader.ReaderThemeLinearLayout>
            </com.martian.libmars.widget.RoundedLayout>
        </LinearLayout>
    </com.martian.libmars.widget.RoundedLayout>
</FrameLayout>
