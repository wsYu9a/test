<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="right">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="16dp"
                android:bottomRightRadius="16dp"/>
            <solid android:color="@color/reader_default_text_color_thirdly_alpha10"/>
            <size
                android:height="32dp"
                android:width="16dp"/>
        </shape>
    </item>
    <item
        android:gravity="center"
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/reader_default_popup_background_color"/>
            <size
                android:height="28dp"
                android:width="28dp"/>
        </shape>
    </item>
</layer-list>
