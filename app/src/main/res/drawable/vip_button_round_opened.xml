<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:alpha="0.6">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <gradient
                android:startColor="@color/vip_bg_opened_start_color_alpha"
                android:endColor="@color/vip_bg_opened_end_color_alpha"
                android:angle="0"
                android:type="linear"/>
        </shape>
    </item>
    <item
        android:state_focused="true"
        android:alpha="0.6">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <gradient
                android:startColor="@color/vip_bg_opened_start_color_alpha"
                android:endColor="@color/vip_bg_opened_end_color_alpha"
                android:angle="0"
                android:type="linear"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/>
            <gradient
                android:startColor="@color/vip_bg_opened_start_color"
                android:endColor="@color/vip_bg_opened_end_color"
                android:angle="0"
                android:type="linear"/>
        </shape>
    </item>
</selector>
