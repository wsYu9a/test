<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:startColor="#ff9d9e9d"
                android:endColor="#ff747674"
                android:angle="270"
                android:centerY="0.75"
                android:centerColor="#ff5a5d5a"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient
                    android:startColor="@color/theme_light_blue"
                    android:endColor="@color/theme_light_blue"
                    android:angle="270"
                    android:centerY="0.75"
                    android:centerColor="@color/theme_light_blue"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient
                    android:startColor="@color/theme_light_blue_accent"
                    android:endColor="@color/theme_light_blue_accent"
                    android:angle="270"
                    android:centerY="0.75"
                    android:centerColor="@color/theme_light_blue_accent"/>
            </shape>
        </clip>
    </item>
</layer-list>
